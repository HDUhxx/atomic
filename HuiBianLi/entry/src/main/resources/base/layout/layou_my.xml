<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="600px"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:background_element="#FFDDDDDD">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent">
            <Button
                ohos:id="$+id:button_set"
                ohos:height="match_parent"
                ohos:width="265px"
                ohos:text="设置"
                ohos:text_size="18fp"
                ohos:layout_alignment="bottom|right"
                ohos:right_padding="65px"
                />
        </DirectionalLayout>
        <Image
            ohos:height="200px"
            ohos:width="match_parent"
            ohos:image_src="$media:huibianli_log"
            ohos:scale_x="2.5"
            ohos:scale_y="2.5"
            ohos:top_padding="60px"
            />
        <Text
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:text="惠便利"
            ohos:text_size="16fp"
            ohos:text_alignment="center"
            ohos:top_margin="120px"/>
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:orientation="horizontal"
                ohos:weight="1">
                <Button
                    ohos:id="$+id:button_denglu"
                    ohos:height="100px"
                    ohos:width="match_content"
                    ohos:text="登录"
                    ohos:text_size="18fp"
                    ohos:left_padding="415px"
                    />
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:orientation="horizontal"
                ohos:weight="1">
                <Button
                    ohos:id="$+id:button_zhuce"
                    ohos:height="100px"
                    ohos:width="match_content"
                    ohos:text="注册"
                    ohos:text_size="18fp"
                    />
            </DirectionalLayout>
        </DirectionalLayout>

    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="10px"
        ohos:width="match_parent"
        ohos:top_margin="20px">
        <Text
            ohos:height="10px"
            ohos:width="match_parent"
            ohos:background_element="#FF979797"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="200px"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Button
            ohos:height="200px"
            ohos:width="0"
            ohos:text="待支付"
            ohos:text_size="18fp"
            ohos:weight="1"/>
        <Button
            ohos:height="200px"
            ohos:width="0"
            ohos:text="待收货"
            ohos:text_size="18fp"
            ohos:weight="1"/>
        <Button
            ohos:height="200px"
            ohos:width="0"
            ohos:text="代发货"
            ohos:text_size="18fp"
            ohos:weight="1"/>
        <Button
            ohos:height="200px"
            ohos:width="0"
            ohos:text="已完成"
            ohos:text_size="18fp"
            ohos:weight="1"/>
        <Button
            ohos:height="200px"
            ohos:width="0"
            ohos:text="全部订单"
            ohos:text_size="18fp"
            ohos:weight="1"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="10px"
        ohos:width="match_parent">
        <Text
            ohos:height="10px"
            ohos:width="match_parent"
            ohos:background_element="#FF979797"/>
    </DirectionalLayout>
    <Component
        ohos:height="80px"
        ohos:width="match_parent"/>
    <DirectionalLayout
        ohos:height="10px"
        ohos:width="match_parent">
        <Text
            ohos:height="10px"
            ohos:width="match_parent"
            ohos:background_element="#FFE0E0E0"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="660px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <DirectionalLayout
            ohos:height="300px"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:orientation="vertical"
                ohos:weight="1">
                <Image
                    ohos:height="120px"
                    ohos:width="100px"
                    ohos:image_src="$media:tiezi"
                    ohos:layout_alignment="center"
                    ohos:top_padding="20px"
                    />
                <Button
                    ohos:id="$+id:button_mendianlog"
                    ohos:height="150px"
                    ohos:width="match_parent"
                    ohos:text="我的门店"
                    ohos:right_margin="10px"
                    ohos:text_size="18fp"
                    />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:orientation="vertical"
                ohos:weight="1">
                <Image
                    ohos:height="120px"
                    ohos:width="100px"
                    ohos:image_src="$media:xieyi"
                    ohos:layout_alignment="center"
                    ohos:top_padding="20px"
                    />
                <Button
                    ohos:id="$+id:button_xieyi"
                    ohos:height="150px"
                    ohos:width="match_parent"
                    ohos:text="用户协议"
                    ohos:right_margin="10px"
                    ohos:text_size="18fp"
                    />
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:orientation="vertical"
                ohos:weight="1">
                <Image
                    ohos:height="120px"
                    ohos:width="100px"
                    ohos:image_src="$media:yingshi"
                    ohos:layout_alignment="center"
                    ohos:top_padding="20px"
                    />
                <Button
                    ohos:id="$+id:button_shengming"
                    ohos:height="150px"
                    ohos:width="match_parent"
                    ohos:text="隐私声明"
                    ohos:right_margin="10px"
                    ohos:text_size="18fp"
                    />
            </DirectionalLayout>
        </DirectionalLayout>

    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="10px"
        ohos:width="match_parent">
        <Text
            ohos:height="10px"
            ohos:width="match_parent"
            ohos:background_element="#FFE0E0E0"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="200px"
        ohos:width="match_parent">
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="#FFEBEBEB"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="10px"
        ohos:width="match_parent">
        <Text
            ohos:height="10px"
            ohos:width="match_parent"
            ohos:background_element="#FFE0E0E0"/>
    </DirectionalLayout>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="120px"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Button
            ohos:id="$+id:button_shouye"
            ohos:height="120px"
            ohos:weight="1"
            ohos:text_alignment="center"
            ohos:text="首页"
            ohos:text_size="18fp"
            ohos:width="0"/>
        <Button
            ohos:id="$+id:button_mendian"
            ohos:height="120px"
            ohos:weight="1"
            ohos:text_alignment="center"
            ohos:text="门店"
            ohos:text_size="18fp"
            ohos:width="0"/>
        <Button
            ohos:height="120px"
            ohos:weight="1"
            ohos:text_alignment="center"
            ohos:text="我的"
            ohos:text_size="18fp"
            ohos:width="0"/>

    </DirectionalLayout>
</DirectionalLayout>