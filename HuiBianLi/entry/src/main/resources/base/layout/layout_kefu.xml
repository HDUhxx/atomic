<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="150px"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0px"
            ohos:weight="1">
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text="客服：小惠"
                ohos:text_size="18fp"
                ohos:left_padding="80px"
                ohos:text_weight="700px"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0px"
            ohos:weight="2">
            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:orientation="horizontal">
            <Text
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:text="客服电话:"
                ohos:text_size="18fp"
                ohos:left_padding="120px"
                ohos:layout_alignment="vertical_center"/>
            <Button
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:text="18888888888"
                ohos:text_size="18fp"
                ohos:right_padding="20px"
                ohos:layout_alignment="vertical_center"/>
            </DirectionalLayout>
        </DirectionalLayout>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="1000px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="200px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <DirectionalLayout
            ohos:weight="1"
            ohos:height="0px"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <TextField
                ohos:height="80px"
                ohos:width="0px"
                ohos:weight="4"
                ohos:hint="请输入发送内容~"
                ohos:text_size="16fp"
                ohos:text_alignment="left|vertical_center"
                ohos:left_padding="30px"
                ohos:background_element="$graphic:customer_service"
                ohos:layout_alignment="center"/>
            <Button
                ohos:height="80px"
                ohos:width="0px"
                ohos:weight="1"
                ohos:text="发送"
                ohos:text_size="16fp"
                ohos:background_element="$graphic:customer_service"
                ohos:layout_alignment="center"/>
        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>