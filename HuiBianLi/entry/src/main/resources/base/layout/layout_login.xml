<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="#FFA2EB87">
    <Component ohos:height="300px"
               ohos:width="match_parent"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">
    <Text ohos:id="$+id:text"
          ohos:height="match_content"
          ohos:width="match_parent"
          ohos:text="惠便利登录"
          ohos:text_color="#000000"
          ohos:layout_alignment="horizontal_center"
          ohos:text_size="32fp"
          ohos:text_alignment="center"
        />
    </DirectionalLayout>

    <Component ohos:height="160px"
               ohos:width="match_parent"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <Text
            ohos:id="$+id:username"
            ohos:text="用  户  名："
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="24fp"
            ohos:left_margin="60px"
            />

        <TextField
            ohos:id="$+id:text_name"
            ohos:height="match_content"
            ohos:width="600px"
            ohos:hint="请输入用户名..."
            ohos:background_element="#EAEDED"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="#708090"
            ohos:text_size="18fp"
            ohos:padding="30px"
            ohos:top_margin="-110px"
            ohos:left_margin="160px"
            />
    </DirectionalLayout>

    <Component ohos:height="120px"
               ohos:width="match_parent"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <Text
            ohos:id="$+id:password"
            ohos:text="密        码："
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="24fp"
            ohos:left_margin="60px"
            />

        <TextField
            ohos:id="$+id:text_password"
            ohos:height="match_content"
            ohos:width="600px"
            ohos:hint="请输入密码..."
            ohos:text_input_type="pattern_password"
            ohos:background_element="#EAEDED"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="#708090"
            ohos:text_size="18fp"
            ohos:padding="30px"
            ohos:top_margin="-110px"
            ohos:left_margin="160px"
            />

    </DirectionalLayout>

    <Component ohos:height="180px"
               ohos:width="match_parent"/>
    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:alignment="horizontal_center">
        <Button
            ohos:id="$+id:login_btn1"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="登录"
            ohos:text_size="20fp"
            ohos:padding="10vp"
            ohos:text_color="#FFFFFF"
            ohos:background_element="#0EAB8D"/>

        <Button
            ohos:id="$+id:login_btnzhuce"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="注册"
            ohos:text_size="20fp"
            ohos:padding="10vp"
            ohos:text_color="#FFFFFF"
            ohos:background_element="#0EAB8D"
            ohos:left_margin="160px"/>
    </DirectionalLayout>

</DirectionalLayout>