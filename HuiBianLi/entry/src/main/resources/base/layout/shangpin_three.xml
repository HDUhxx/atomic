<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="1800px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent">
                <Image
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:image_src="$media:huanggua"/>
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent">
                <Text
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:text="水果黄瓜:个头小小,口感好又称为无刺黄瓜，果实长度12~15 厘米左右，直径3厘米左右，果实表面无刺，可以生食。"
                    ohos:text_size="18fp"
                    ohos:multiple_lines="true"
                    ohos:max_text_lines="4"/>
                <Text
                    ohos:height="80px"
                    ohos:width="match_parent"
                    ohos:text="￥9.80"
                    ohos:text_weight="800px"
                    ohos:text_color="red"
                    ohos:text_size="24fp"/>
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="100px"
                ohos:width="match_parent">
                <Text
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:text="图文详情"
                    ohos:text_size="18fp"
                    ohos:text_alignment="center"
                    ohos:text_color="red"/>
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical">
                <Image
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:huanggua"/>
                <Image
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:gua"/>
            </DirectionalLayout>
        </DirectionalLayout>
    </ScrollView>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="120px"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Button
            ohos:id="$+id:button_kefu3"
            ohos:height="match_parent"
            ohos:width="0px"
            ohos:weight="1"
            ohos:text="客服"
            ohos:text_size="16fp"/>
        <Button
            ohos:id="$+id:button_yuding3"
            ohos:height="match_parent"
            ohos:width="0px"
            ohos:weight="2"
            ohos:text="马上预购"
            ohos:text_size="16fp"
            ohos:background_element="#FFFDBDC8"/>
    </DirectionalLayout>
</DirectionalLayout>