<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Component
        ohos:height="30px"
        ohos:width="match_parent"/>
    <DirectionalLayout
        ohos:height="250px"
        ohos:width="1080"
        ohos:orientation="vertical">
        <DirectionalLayout
            ohos:height="130px"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <TextField
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="5"
                ohos:text_size="17fp"
                ohos:left_padding="30px"
                ohos:layout_alignment="vertical_center"
                ohos:hint="请输入搜索内容"
                ohos:text_alignment="vertical_center"
                ohos:left_margin="30px"
                ohos:background_element="$graphic:customer_service"/>
            <Button
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="2"
                ohos:text="搜索"
                ohos:text_size="18fp"
                ohos:left_margin="30px"
                ohos:text_alignment="center"
                ohos:background_element="$graphic:customer_service"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="120px"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Button
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                ohos:text="推荐"
                ohos:text_size="18fp"
                ohos:text_alignment="center"
                />
            <Button
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                ohos:text="食物"
                ohos:text_size="18fp"
                ohos:text_alignment="center"
                />
            <Button
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                ohos:text="手机"
                ohos:text_size="18fp"
                ohos:text_alignment="center"
                />
            <Button
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                ohos:text="百货"
                ohos:text_size="18fp"
                ohos:text_alignment="center"
                />
            <Button
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                ohos:text="男装"
                ohos:text_size="18fp"
                ohos:text_alignment="center"
                />
            <Button
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                ohos:text="电器"
                ohos:text_size="18fp"
                ohos:text_alignment="center"
                />
            <Button
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                ohos:text="女装"
                ohos:text_size="18fp"
                ohos:text_alignment="center"
                />
        </DirectionalLayout>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="1500px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <ScrollView
            ohos:height="match_parent"
            ohos:width="match_parent">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical"
                ohos:background_element="#FFD6D6D6">
                <DirectionalLayout
                    ohos:height="300px"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal"
                    ohos:background_element="#ffffff">
                    <DirectionalLayout
                        ohos:height="match_parent"
                        ohos:width="0px"
                        ohos:weight="1"
                        ohos:orientation="vertical">
                        <Image
                            ohos:height="match_parent"
                            ohos:width="match_parent"
                            ohos:image_src="$media:shangpi1"
                            ohos:scale_x="3.5"
                            ohos:scale_y="3.5"/>
                    </DirectionalLayout>
                    <DirectionalLayout
                        ohos:height="match_parent"
                        ohos:width="0px"
                        ohos:weight="1"
                        ohos:orientation="vertical">
                        <Image
                            ohos:height="match_parent"
                            ohos:width="match_parent"
                            ohos:image_src="$media:shangpi2"
                            ohos:scale_x="3.5"
                            ohos:scale_y="3.5"/>
                    </DirectionalLayout>
                    <DirectionalLayout
                        ohos:height="match_parent"
                        ohos:width="0px"
                        ohos:weight="1"
                        ohos:orientation="vertical">
                        <Image
                            ohos:height="match_parent"
                            ohos:width="match_parent"
                            ohos:image_src="$media:shangpi3"
                            ohos:scale_x="3.5"
                            ohos:scale_y="3.5"/>
                    </DirectionalLayout>
                    <DirectionalLayout
                        ohos:height="match_parent"
                        ohos:width="0px"
                        ohos:weight="1"
                        ohos:orientation="vertical">
                        <Image
                            ohos:height="match_parent"
                            ohos:width="match_parent"
                            ohos:image_src="$media:shangpi4"
                            ohos:scale_x="3.5"
                            ohos:scale_y="3.5"/>
                    </DirectionalLayout>
                </DirectionalLayout>
                <Component
                    ohos:height="40px"
                    ohos:width="match_parent"/>
                <DirectionalLayout
                    ohos:height="350px"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">
                    <DirectionalLayout
                        ohos:height="300px"
                        ohos:width="match_parent"
                        ohos:orientation="horizontal">
                        <Image
                            ohos:height="match_parent"
                            ohos:width="0px"
                            ohos:weight="1"
                            ohos:image_src="$media:shucai"
                            ohos:right_margin="5px"/>
                        <Image
                            ohos:height="match_parent"
                            ohos:width="0px"
                            ohos:weight="1"
                            ohos:image_src="$media:p8"
                            ohos:right_margin="5px"/>
                        <Image
                            ohos:height="match_parent"
                            ohos:width="0px"
                            ohos:weight="1"
                            ohos:image_src="$media:wosun"
                            ohos:right_margin="5px"/>
                        <Image
                            ohos:height="match_parent"
                            ohos:width="0px"
                            ohos:weight="1"
                            ohos:image_src="$media:youcai"
                            ohos:right_margin="5px"/>
                        <Image
                            ohos:height="match_parent"
                            ohos:width="0px"
                            ohos:weight="1"
                            ohos:image_src="$media:yumi"
                            ohos:right_margin="5px"/>
                    </DirectionalLayout>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="100px"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal"
                    ohos:background_element="#ffffff">
                    <Text
                        ohos:height="match_parent"
                        ohos:width="match_parent"
                        ohos:text="商品区域"
                        ohos:text_alignment="center"
                        ohos:text_size="18fp"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="640px"
                    ohos:width="match_parent"
                    ohos:orientation="vertical">

                    <DirectionalLayout
                        ohos:height="500px"
                        ohos:width="match_parent"
                        ohos:orientation="horizontal">
                        <Image
                            ohos:height="match_content"
                            ohos:width="match_parent"
                            ohos:image_src="$media:yunshu1"/>
                    </DirectionalLayout>
                    <DirectionalLayout
                        ohos:height="150px"
                        ohos:width="match_parent"
                        ohos:orientation="horizontal"
                        ohos:background_element="#ffffff">
                        <DirectionalLayout
                            ohos:height="match_parent"
                            ohos:width="0"
                            ohos:weight="3"
                            ohos:orientation="horizontal">
                            <Text
                                ohos:height="match_parent"
                                ohos:width="match_content"
                                ohos:text="价格:"
                                ohos:text_size="24fp"/>
                            <Text
                                ohos:height="match_parent"
                                ohos:width="match_content"
                                ohos:text="￥39800"
                                ohos:text_weight="800px"
                                ohos:text_alignment="vertical_center"
                                ohos:text_color="red"
                                ohos:text_size="22fp"/>
                        </DirectionalLayout>
                        <DirectionalLayout
                            ohos:height="match_parent"
                            ohos:width="0"
                            ohos:weight="1"
                            ohos:orientation="horizontal">
                            <Button
                                ohos:height="100px"
                                ohos:width="match_parent"
                                ohos:text="立即购买"
                                ohos:text_color="red"
                                ohos:text_size="18fp"
                                ohos:layout_alignment="vertical_center"
                                ohos:background_element="$graphic:customer_service"
                                />
                        </DirectionalLayout>
                    </DirectionalLayout>

                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="640px"
                    ohos:width="match_parent"
                    ohos:orientation="vertical">

                    <DirectionalLayout
                        ohos:height="500px"
                        ohos:width="match_parent"
                        ohos:orientation="horizontal">
                        <Image
                            ohos:height="match_content"
                            ohos:width="match_parent"
                            ohos:image_src="$media:shoping1"/>
                    </DirectionalLayout>
                    <DirectionalLayout
                        ohos:height="150px"
                        ohos:width="match_parent"
                        ohos:orientation="horizontal"
                        ohos:background_element="#ffffff">
                        <DirectionalLayout
                            ohos:height="match_parent"
                            ohos:width="0"
                            ohos:weight="3"
                            ohos:orientation="horizontal">
                            <Text
                                ohos:height="match_parent"
                                ohos:width="match_content"
                                ohos:text="价格:"
                                ohos:text_size="24fp"/>
                            <Text
                                ohos:height="match_parent"
                                ohos:width="match_content"
                                ohos:text="￥39800"
                                ohos:text_weight="800px"
                                ohos:text_alignment="vertical_center"
                                ohos:text_color="red"
                                ohos:text_size="22fp"/>
                        </DirectionalLayout>
                        <DirectionalLayout
                            ohos:height="match_parent"
                            ohos:width="0"
                            ohos:weight="1"
                            ohos:orientation="horizontal">
                            <Button
                                ohos:height="100px"
                                ohos:width="match_parent"
                                ohos:text="立即购买"
                                ohos:text_color="red"
                                ohos:text_size="18fp"
                                ohos:layout_alignment="vertical_center"
                                ohos:background_element="$graphic:customer_service"
                                />
                        </DirectionalLayout>
                    </DirectionalLayout>

                </DirectionalLayout>
            </DirectionalLayout>
        </ScrollView>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="130px"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Button
            ohos:id="$+id:button_shouye"
            ohos:height="match_parent"
            ohos:width="0"
            ohos:weight="1"
            ohos:text_size="18fp"
            ohos:text="首页"/>
        <Button
            ohos:id="$+id:button_mendian"
            ohos:height="match_parent"
            ohos:width="0"
            ohos:weight="1"
            ohos:text_size="18fp"
            ohos:text="门店"/>
        <Button
            ohos:id="$+id:button_my"
            ohos:height="match_parent"
            ohos:width="0"
            ohos:weight="1"
            ohos:text_size="18fp"
            ohos:text="我的"/>
    </DirectionalLayout>
</DirectionalLayout>