<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Text
        ohos:height="200px"
        ohos:width="match_parent"
        ohos:text="欣龙"
        ohos:text_size="30fp"
        ohos:left_padding="400px"
        ohos:top_padding="10px"
        ohos:background_element="#FFDAD8D8"/>
<Image
    ohos:height="200px"
    ohos:width="200px"
    ohos:image_src="$media:shiliao1"
    ohos:background_element="$graphic:circle_button_element"
    ohos:top_margin="40px"
    ohos:left_margin="20px"/>
    <TextField
        ohos:height="300px"
        ohos:width="900px"
        ohos:hint="请输入..."
        ohos:text_size="50"
        ohos:left_margin="180px"
        ohos:top_margin="20px"
        ohos:padding="20"
        ohos:background_element="$graphic:text_field_layout"
        ohos:max_text_lines="2"/>
    <Image
        ohos:height="200px"
        ohos:width="200px"
        ohos:image_src="$media:shiliao2"
        ohos:background_element="$graphic:circle_button_element"
        ohos:top_margin="40px"
        ohos:left_margin="880px"/>
    <TextField
        ohos:height="300px"
        ohos:width="900px"
        ohos:hint="请输入..."
        ohos:text_size="50"
        ohos:left_margin="20px"
        ohos:top_margin="20px"
        ohos:padding="20"
        ohos:background_element="$graphic:text_field_layout"
        ohos:max_text_lines="2"/>
    <Image
        ohos:height="200px"
        ohos:width="200px"
        ohos:image_src="$media:shiliao1"
        ohos:background_element="$graphic:circle_button_element"
        ohos:top_margin="60px"
        ohos:left_margin="20px"/>
    <TextField
        ohos:height="250px"
        ohos:width="900px"
        ohos:hint="请输入..."
        ohos:text_size="50"
        ohos:left_margin="180px"
        ohos:top_margin="20px"
        ohos:padding="20"
        ohos:background_element="$graphic:text_field_layout"
        ohos:max_text_lines="2"/>
</DirectionalLayout>