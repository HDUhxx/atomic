<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
<DirectionalLayout
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="#FFE0DFDF">

    <DirectionalLayout
        ohos:height="150px"
        ohos:width="match_parent">
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="设置"
            ohos:text_size="26fp"
            ohos:text_weight="700px"
            ohos:text_alignment="center"/>
    </DirectionalLayout>
    <Component
        ohos:height="30px"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <Button
            ohos:id="$+id:button_shezi_xieyi"
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:text="用户协议"
            ohos:text_size="18fp"
            ohos:background_element="#ffffff"/>
        <Button
            ohos:id="$+id:button_shezi_yingshi"
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:text="隐私声明"
            ohos:text_size="18fp"
            ohos:top_margin="10px"
            ohos:background_element="#ffffff"/>
        <Button
            ohos:id="$+id:button_shezi_bangzhu"
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:text="帮助反馈"
            ohos:text_size="18fp"
            ohos:top_margin="10px"
            ohos:background_element="#ffffff"/>
    </DirectionalLayout>
</DirectionalLayout>
</DirectionalLayout>