<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="300px"
        ohos:width="match_parent"
        >
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="预购申请"
            ohos:text_size="28fp"
            ohos:text_alignment="center"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="800px"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        >
        <DirectionalLayout
            ohos:height="120px"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:top_margin="30px">
            <Text
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:text="姓名:"
                ohos:text_size="18fp"
                ohos:weight="1"
                />
            <TextField
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="3"
                ohos:hint="请输入您的姓名"
                ohos:text_size="18fp"
                ohos:background_element="$graphic:customer_service"
                ohos:layout_alignment="center"
                ohos:text_alignment="vertical_center"
                ohos:left_padding="30px"/>
            <Component
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="120px"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:top_margin="30px">
            <Text
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:text="电话:"
                ohos:text_size="18fp"
                ohos:weight="1"
                />
            <TextField
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="3"
                ohos:hint="请输入您的电话号码"
                ohos:text_size="18fp"
                ohos:background_element="$graphic:customer_service"
                ohos:layout_alignment="center"
                ohos:text_alignment="vertical_center"
                ohos:left_padding="30px"/>
            <Component
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="120px"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:top_margin="30px">
            <Text
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:text="地址:"
                ohos:text_size="18fp"
                ohos:weight="1"
                />
            <TextField
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="3"
                ohos:hint="请输入您的收货地址"
                ohos:text_size="18fp"
                ohos:background_element="$graphic:customer_service"
                ohos:layout_alignment="center"
                ohos:text_alignment="vertical_center"
                ohos:left_padding="30px"/>
            <Component
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="120px"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:top_margin="30px">
            <Text
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:text="数量:"
                ohos:text_size="18fp"
                ohos:weight="1"
                />
            <TextField
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="3"
                ohos:hint="请输入您的购物数量"
                ohos:text_size="18fp"
                ohos:background_element="$graphic:customer_service"
                ohos:layout_alignment="center"
                ohos:text_alignment="vertical_center"
                ohos:left_padding="30px"/>
            <Component
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                />
        </DirectionalLayout>
    </DirectionalLayout>
    <DirectionalLayout


        ohos:height="120px"
        ohos:width="match_parent"
        ohos:top_margin="80px"
        >
        <Button
            ohos:id="$+id:button_tijiao"
            ohos:height="match_parent"
            ohos:width="300px"
            ohos:text="提交"
            ohos:text_size="18fp"
            ohos:text_alignment="center"
            ohos:layout_alignment="center"
            ohos:background_element="$graphic:customer_service"/>
    </DirectionalLayout>
</DirectionalLayout>