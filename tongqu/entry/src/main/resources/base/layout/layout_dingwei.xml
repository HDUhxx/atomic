<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="200px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <Text
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:text="当前小区:"
            ohos:text_size="18fp"
            />
        <Text
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:text="全国服务中心"
            ohos:text_size="16fp"
            ohos:left_padding="30px"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="20px"
        ohos:width="match_parent"
        ohos:top_margin="80px"
        ohos:background_element="#FFDBDBDB"/>
    <DirectionalLayout
        ohos:height="100px"
        ohos:width="match_parent">
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="目前入驻小区:"
            ohos:text_size="16fp"/>
    </DirectionalLayout>
    <Component
        ohos:height="40px"
        ohos:width="match_parent"/>
    <DirectionalLayout
        ohos:height="400px"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:background_element="#FFD6D6D6">
        <ScrollView
            ohos:height="match_parent"
            ohos:width="match_parent">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical"
                ohos:background_element="#ffffff">
                <Button
                    ohos:height="100px"
                    ohos:width="match_parent"
                    ohos:text="李朗国际珠宝"
                    ohos:text_size="16fp"
                    ohos:text_alignment="left"/>
                <Button
                    ohos:height="100px"
                    ohos:width="match_parent"
                    ohos:text="大运小区"
                    ohos:text_size="16fp"
                    ohos:text_alignment="left"/>
                <Button
                    ohos:height="100px"
                    ohos:width="match_parent"
                    ohos:text="深圳市中海怡翠社区"
                    ohos:text_size="16fp"
                    ohos:text_alignment="left"/>
                <Button
                    ohos:height="100px"
                    ohos:width="match_parent"
                    ohos:text="康达尔花园"
                    ohos:text_size="16fp"
                    ohos:text_alignment="left"/>
                <Button
                    ohos:height="100px"
                    ohos:width="match_parent"
                    ohos:text="大芬油画村"
                    ohos:text_size="16fp"
                    ohos:text_alignment="left"/>
                <Button
                    ohos:height="100px"
                    ohos:width="match_parent"
                    ohos:text="恒昌快递超市"
                    ohos:text_size="16fp"
                    ohos:text_alignment="left"/>
                <Button
                    ohos:height="100px"
                    ohos:width="match_parent"
                    ohos:text="康乐小区"
                    ohos:text_size="16fp"
                    ohos:text_alignment="left"/>
            </DirectionalLayout>
        </ScrollView>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:layout_alignment="bottom">
        <Button
            ohos:id="$+id:button_weizhi_sy"
            ohos:width="match_content"
            ohos:height="match_parent"
            ohos:text="首页"
            ohos:text_size="18fp"
            ohos:weight="1"
            />
        <Button
            ohos:id="$+id:button_weizhi_broadcast"
            ohos:width="match_content"
            ohos:height="match_parent"
            ohos:text="广播"
            ohos:text_size="18fp"
            ohos:weight="1"
            />
        <Button
            ohos:id="$+id:button_weizhi_my"
            ohos:width="match_content"
            ohos:height="match_parent"
            ohos:text="我的"
            ohos:text_size="18fp"
            ohos:weight="1"
            />

    </DirectionalLayout>
</DirectionalLayout>