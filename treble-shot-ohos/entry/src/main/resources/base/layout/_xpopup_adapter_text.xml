<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="vertical">

    <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="center"
            ohos:bottom_padding="13vp"
            ohos:end_padding="25vp"
            ohos:orientation="horizontal"
            ohos:start_padding="25vp"
            ohos:top_padding="13vp">

        <Image
                ohos:id="$+id:iv_image"
                ohos:height="22vp"
                ohos:width="22vp"
                ohos:layout_alignment="vertical_center"
                ohos:right_margin="8vp"/>

        <Text
                ohos:id="$+id:tv_text"
                ohos:height="match_content"
                ohos:width="0vp"
                ohos:layout_alignment="vertical_center"
                ohos:max_text_lines="1"
                ohos:text="条目"
                ohos:text_color="$color:_xpopup_title_color"
                ohos:text_size="15fp"
                ohos:truncation_mode="ellipsis_at_end"
                ohos:weight="1"/>

    </DirectionalLayout>

    <Component
            ohos:id="$+id:item_dirver"
            ohos:height="0.5vp"
            ohos:width="match_parent"/>

</DirectionalLayout>