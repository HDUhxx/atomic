<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <include
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout="$layout:w_layout_back_toolbar"/>
    <Component
        ohos:height="0.5vp"
        ohos:width="match_parent"
        ohos:background_element="gray"/>
    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">
            <DependentLayout
                ohos:id="$+id:ly_device"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="40vp"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">
                <Text
                    ohos:id="$+id:device_name"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="设备名"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:device_name"
                    ohos:text="这个设备名称将会在其他设备上显示"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:background_element="$graphic:check_box"
                    ohos:visibility="hide"/>
            </DependentLayout>

            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:visibility="hide"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">
                <Text
                    ohos:id="$+id:dark_theme"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="暗黑风格"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:dark_theme"
                    ohos:text="使用暗黑风格主题"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:id="$+id:check_dark_theme"
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:check_element="null"
                    ohos:text="dark_theme"
                    ohos:text_size="0"
                    ohos:background_element="$graphic:check_box"/>
            </DependentLayout>

            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:visibility="hide"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">
                <Text
                    ohos:id="$+id:amoled"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="为AMOLED屏优化"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:amoled"
                    ohos:text="使用更黑字体"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:id="$+id:check_amoled"
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:check_element="null"
                    ohos:text="amoled_theme"
                    ohos:text_size="0"
                    ohos:background_element="$graphic:check_box"/>
            </DependentLayout>
            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:visibility="hide"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">
                <Text
                    ohos:id="$+id:font_setting"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="使用推荐字体"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:font_setting"
                    ohos:text="使用预提供的自定义字体"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:id="$+id:check_font_setting"
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:check_element="null"
                    ohos:text="custom_fonts"
                    ohos:text_size="0"
                    ohos:background_element="$graphic:check_box"/>
            </DependentLayout>
            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">

                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:layout_alignment="left"
                    ohos:image_src="$graphic:ic_vpn_key_white_24dp"/>

                <DependentLayout
                    ohos:height="match_content"
                    ohos:left_margin="40vp"
                    ohos:width="match_content">
                    <Text
                        ohos:id="$+id:xry"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="信任域"
                        ohos:text_size="15fp"/>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:below="$id:xry"
                        ohos:text="在应用启动时设置信任域为开启"
                        ohos:text_size="12fp"
                        ohos:top_margin="4vp"/>
                    <Checkbox
                        ohos:id="$+id:check_xry"
                        ohos:height="25vp"
                        ohos:width="25vp"
                        ohos:vertical_center="true"
                        ohos:align_parent_right="true"
                        ohos:check_element="null"
                        ohos:text="trust_always"
                        ohos:text_size="0"
                        ohos:background_element="$graphic:check_box"/>
                 </DependentLayout>
            </DependentLayout>
            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:left_margin="40vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">
                <Text
                    ohos:id="$+id:wifi_xry"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="启用热点时打开信任域"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:wifi_xry"
                    ohos:text="信任域也会相应的被开启"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:id="$+id:check_wifi_xry"
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:check_element="null"
                    ohos:text="hotspot_trust"
                    ohos:text_size="0"
                    ohos:background_element="$graphic:check_box"/>
            </DependentLayout>
            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="40vp"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">
                <Text
                    ohos:id="$+id:qr_xry"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="二维码连接设备启用信任域"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:qr_xry"
                    ohos:text="允许二维码连接设备打开信任域"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:id="$+id:check_qr_xry"
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:check_element="null"
                    ohos:text="qr_trust"
                    ohos:text_size="0"
                    ohos:background_element="$graphic:check_box"/>
            </DependentLayout>
            <Component
                ohos:height="1vp"
                ohos:width="match_parent"
                ohos:background_element="gray"/>
            <DependentLayout
                ohos:id="$+id:ly_notification_setting"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="40vp"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">
                <Text
                    ohos:id="$+id:notification_setting"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="通知设置"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:notification_setting"
                    ohos:text="打开通知设置"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:check_element="null"
                    ohos:background_element="$graphic:check_box"
                    ohos:visibility="hide"/>
            </DependentLayout>
            <Component
                ohos:height="1vp"
                ohos:width="match_parent"
                ohos:background_element="gray"/>
            <DependentLayout
                ohos:id="$+id:ly_cclj"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">

                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:layout_alignment="left"
                    ohos:image_src="$graphic:ic_save_white_24dp"/>

                <DependentLayout
                    ohos:height="match_content"
                    ohos:left_margin="40vp"
                    ohos:width="match_content">
                        <Text
                            ohos:id="$+id:cclj"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="存储路径"
                            ohos:text_size="15fp"/>
                        <Text
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:below="$id:cclj"
                            ohos:text="新文件将被存储在这个文件夹"
                            ohos:text_size="12fp"
                            ohos:top_margin="4vp"/>
                        <Checkbox
                            ohos:height="25vp"
                            ohos:width="25vp"
                            ohos:vertical_center="true"
                            ohos:align_parent_right="true"
                            ohos:check_element="null"
                            ohos:background_element="$graphic:check_box"
                            ohos:visibility="hide"/>
                </DependentLayout>
            </DependentLayout>
            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="40vp"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">
                <Text
                    ohos:id="$+id:jzlst"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="加载略缩图"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:jzlst"
                    ohos:text="显示文件略缩图"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:id="$+id:check_jzlst"
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:check_element="null"
                    ohos:text="load_thumbnails"
                    ohos:text_size="0"
                    ohos:background_element="$graphic:check_box"/>
            </DependentLayout>
            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="40vp"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">
                <Text
                    ohos:id="$+id:stop_app_stop_service"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="关闭应用时停止服务"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:stop_app_stop_service"
                    ohos:text="如果没有正在进行的任务将停止通讯"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:id="$+id:check_stop_app_stop_service"
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:check_element="null"
                    ohos:text="kill_service_on_exit"
                    ohos:text_size="0"
                    ohos:background_element="$graphic:check_box"/>
            </DependentLayout>
            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:visibility="hide"
                ohos:left_margin="40vp"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">
                <Text
                    ohos:id="$+id:nsd"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="启用NSD"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:nsd"
                    ohos:text="NSD将会改进可发现性"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:id="$+id:check_nsd"
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:check_element="null"
                    ohos:text="nsd_enabled"
                    ohos:text_size="0"
                    ohos:background_element="$graphic:check_box"/>
            </DependentLayout>
            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="40vp"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">
                <Text
                    ohos:id="$+id:kfzms"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="开发者模式"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:kfzms"
                    ohos:text="这会禁用用户设置"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:id="$+id:check_kfzms"
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:check_element="null"
                    ohos:text="developer_mode"
                    ohos:text_size="0"
                    ohos:background_element="$graphic:check_box"/>
            </DependentLayout>
            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="40vp"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp">
                <Text
                    ohos:id="$+id:zqd"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="自启动"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:zqd"
                    ohos:text="检测到连接时启动通信"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:id="$+id:check_zqd"
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:check_element="null"
                    ohos:text="allow_autoconnect"
                    ohos:text_size="0"
                    ohos:background_element="$graphic:check_box"/>
            </DependentLayout>
            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="40vp"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp"
                ohos:visibility="hide">
                <Text
                    ohos:id="$+id:xsxtyy"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="显示系统应用"
                    ohos:text_size="15fp"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:below="$id:xsxtyy"
                    ohos:text="在‘分享’区域显示系统应用"
                    ohos:text_size="12fp"
                    ohos:top_margin="4vp"/>
                <Checkbox
                    ohos:id="$+id:check_xsxtyy"
                    ohos:height="25vp"
                    ohos:width="25vp"
                    ohos:vertical_center="true"
                    ohos:align_parent_right="true"
                    ohos:check_element="null"
                    ohos:text="show_system_apps"
                    ohos:text_size="0"
                    ohos:background_element="$graphic:check_box"/>
            </DependentLayout>

        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>