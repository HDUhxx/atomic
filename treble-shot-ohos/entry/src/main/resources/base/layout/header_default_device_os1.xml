<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:header_default_device_container"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:background_element="#ffffff"
    ohos:top_margin="60vp">

    <StackLayout
        ohos:height="80vp"
        ohos:width="80vp"
        ohos:bottom_margin="15vp">

        <Image
            ohos:id="$+id:image_DL"
            ohos:width="80vp"
            ohos:height="80vp"
            ohos:background_element="$graphic:os_circle_image_element"
            ohos:orientation="vertical">
        </Image>
        <Text
            ohos:id="$+id:tx_show_name_"
            ohos:height="60vp"
            ohos:width="80vp"
            ohos:text_size="40fp"
            ohos:text_alignment="center"
            ohos:text_color="$color:black_dominant"
            ohos:text=""/>
        <Image
            ohos:id="$+id:img_edit_name"
            ohos:height="24vp"
            ohos:width="24vp"
            ohos:background_element="$graphic:os_circle_button_element"
            ohos:image_src="$graphic:ic_edit_white_24dp"
            ohos:layout_alignment="right|bottom"
            ohos:padding="2vp"/>

    </StackLayout>

</DirectionalLayout>
