<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:padding="35vp">
    <Text
        ohos:id="$+id:title"
        ohos:height="match_content"
        ohos:width="200vp"
        ohos:text="输入一个设备名称"
        ohos:text_size="15fp"
        ohos:horizontal_center="true"/>
    <TextField
        ohos:id="$+id:edit_text"
        ohos:height="match_content"
        ohos:width="200vp"
        ohos:top_margin="5vp"
        ohos:text_size="13vp"
        ohos:padding="5vp"
        ohos:min_height="25vp"
        ohos:horizontal_center="true"
        ohos:below="$id:title"
        ohos:background_element="$graphic:background_text_field"/>
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_margin="15vp"
        ohos:below="$id:edit_text">
        <Button
            ohos:id="$+id:confirm"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="确认"
            ohos:text_color="#2eac08"
            ohos:align_parent_right="true"
            ohos:text_size="14fp"/>
        <Button
            ohos:id="$+id:cancel"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="取消"
            ohos:text_color="#2eac08"
            ohos:left_of="$id:confirm"
            ohos:right_margin="30vp"
            ohos:text_size="14fp"/>
    </DependentLayout>
</DependentLayout>