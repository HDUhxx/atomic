<ScrollView xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:layout_hotspot_status_scroll"
    ohos:width="match_parent"
    ohos:height="match_content">
    <DirectionalLayout
        ohos:id="$+id:layout_hotspot_status_container"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:top_margin="15vp"
        ohos:orientation="vertical">

        <include ohos:id="$+id:actionbar_control"
                 ohos:layout="$layout:hotspot_layout_header"
                 ohos:width="match_parent"
                 ohos:bottom_margin="5vp"
                 ohos:height="match_content"/>

        <Component
            ohos:height="0.5vp"
            ohos:width="match_parent"
            ohos:background_element="gray"/>

        <Image
            ohos:id="$+id:layout_hotspot_manager_qr_image"
            ohos:width="match_parent"
            ohos:height="260vp"
            ohos:left_margin="20vp"
            ohos:right_margin="20vp"
            ohos:image_src="$graphic:ic_qrcode_white_128dp" />

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:background_element="$graphic:os_black_bg"
            ohos:top_padding="20vp"
            ohos:bottom_padding="20vp"
            ohos:margin="15vp">

            <include
                layout="$layout:include_layout_hotspot_status_info_container"
                ohos:width="match_parent"
                ohos:height="match_content" />

        </DirectionalLayout>

    </DirectionalLayout>
</ScrollView>