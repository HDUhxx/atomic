<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Image
        ohos:id="$+id:layout_welcome_page_1_splash_image"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="top"
        ohos:image_src="$graphic:ic_trebleshot_original_white_128dp"/>

    <DirectionalLayout
        ohos:id="$+id:layout_welcome_page_1_details"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="vertical">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="center"
            ohos:text="$string:app_name1"
            ohos:text_color="#000000"
            ohos:text_size="$float:font_size_title"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="center"
            ohos:text="$string:text_welcome"
            ohos:text_color="$color:dark_colorShadowEnd"
            ohos:text_size="15vp"/>
    </DirectionalLayout>

</DirectionalLayout>