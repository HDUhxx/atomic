<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:id="$+id:content_view"
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:background_element="$color:windowBackground"
        ohos:alignment="center"
        ohos:orientation="horizontal">
        <StackLayout
            ohos:height="match_content"
            ohos:width="match_content">
            <Text
                ohos:id="$+id:back_text"
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:visibility="hide"
                ohos:layout_alignment="center"
                ohos:background_element="$color:black_dominant"/>
            <Image
                ohos:id="$+id:back_header"
                ohos:left_margin="15vp"
                ohos:right_margin="15vp"
                ohos:height="40vp"
                ohos:width="30vp"
                ohos:scale_x="3"
                ohos:scale_y="3"
                ohos:layout_alignment="center"
                ohos:image_src="$media:ic_icon"
                />
        </StackLayout>

        <StackLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="$color:white"
            ohos:layout_alignment="vertical_center">

            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:alignment="vertical_center"
                ohos:orientation="horizontal">

                <Text
                    ohos:id="$+id:txt_zero"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:layout_alignment="center"
                    ohos:text="TShot DEBUG"
                    ohos:text_color="$color:black_dominant"
                    ohos:text_size="50"
                    ohos:weight="1.0"/>

                <TextField
                    ohos:id="$+id:tf_view"
                    ohos:height="match_content"
                    ohos:width="0vp"
                    ohos:layout_alignment="vertical_center"
                    ohos:max_text_lines="1"
                    ohos:text_alignment="vertical_center"
                    ohos:weight="1.0"/>

                <Image
                    ohos:id="$+id:search_icon1"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$graphic:ic_search_white_24dp"
                    ohos:left_padding="10vp"
                    ohos:right_padding="10vp"/>

                <Image
                    ohos:id="$+id:more_main"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_padding="10vp"
                    ohos:right_padding="10vp"
                    ohos:image_src="$graphic:ic_more_vert_white_24dp"/>

            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:search_container"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:alignment="vertical_center"
                ohos:background_element="$color:white"
                ohos:layout_alignment="vertical_center"
                ohos:orientation="horizontal"
                ohos:visibility="hide">


                <TextField
                    ohos:id="$+id:search_box_control"
                    ohos:height="match_parent"
                    ohos:width="0vp"
                    ohos:basement="$color:dark_colorSelection"
                    ohos:element_left="$graphic:ic_search_white_24dp"
                    ohos:layout_alignment="vertical_center"
                    ohos:left_padding="20vp"
                    ohos:max_text_lines="1"
                    ohos:text_alignment="vertical_center"
                    ohos:text_size="$float:font_size_big"
                    ohos:weight="1"/>

                <Image
                    ohos:id="$+id:close_icon"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$graphic:ic_close_white_24dp"
                    ohos:layout_alignment="vertical_center"
                    ohos:padding="10vp"
                    ohos:scale_mode="zoom_center"
                    ohos:top_padding="1vp"
                    />
            </DirectionalLayout>

        </StackLayout>

    </DirectionalLayout>

    <Component
        ohos:height="0.5vp"
        ohos:width="match_parent"
        ohos:background_element="gray"/>

</DirectionalLayout>