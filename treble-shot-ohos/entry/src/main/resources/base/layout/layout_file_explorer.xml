<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    ohos:width="match_parent"
    ohos:height="match_parent"
    xmlns:ohos="http://schemas.huawei.com/res/ohos">
        <DirectionalLayout
            ohos:id="$+id:text_layout"
            ohos:height="60vp"
            ohos:width="match_parent"
            ohos:alignment="center"
            ohos:layout_alignment="center"
            ohos:align_parent_bottom="true"
            ohos:orientation="horizontal">
            <Text
                ohos:id="$+id:text_home"
                ohos:height="60vp"
                ohos:width="match_content"
                ohos:layout_alignment="horizontal_center"
                ohos:element_left="$graphic:ic_home_white_24dp"
                ohos:text_size="50"
                ohos:text_color="$color:colorSecondary"
                ohos:text="主目录"/>
            <ListContainer
                ohos:id="$+id:item_list"
                ohos:visibility="hide"
                ohos:height="100vp"
                ohos:width="match_content"
                ohos:orientation="horizontal">
            </ListContainer>
        </DirectionalLayout>

    <Text
        ohos:id="$+id:under_line"
        ohos:height="1vp"
        ohos:above="$id:text_layout"
        ohos:visibility="invisible"
        ohos:width="match_parent"
        ohos:background_element="$color:string_1"/>
    <DirectionalLayout
        ohos:id="$+id:tab_page"
        ohos:above="$id:under_line"
        ohos:height="match_parent"
        ohos:orientation="vertical"
        ohos:width="match_parent">
        <ScrollView
            ohos:height="match_parent"
            ohos:width="match_parent">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent">
                <Text
                    ohos:id="$+id:text_helloworld"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:background_ability_main"
                    ohos:layout_alignment="left"
                    ohos:left_padding="20vp"
                    ohos:text="存储"
                    ohos:text_size="50"
                    />
                <ListContainer
                    ohos:id="$+id:dl1"
                    ohos:height="match_content"
                    ohos:text="ddd"
                    ohos:width="match_parent"/>
                <Text
                    ohos:id="$+id:gz"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:background_ability_main"
                    ohos:layout_alignment="horizontal_center"
                    ohos:text_color="$color:colorSecondary"
                    ohos:text="挂载文件夹"
                    ohos:text_size="15fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:background_ability_main"
                    ohos:layout_alignment="left"
                    ohos:left_margin="20vp"
                    ohos:text="文件夹"
                    ohos:text_size="50"
                    />
                <ListContainer
                    ohos:id="$+id:dl2"
                    ohos:height="match_parent"
                    ohos:width="match_parent"/>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:background_ability_main"
                    ohos:layout_alignment="left"
                    ohos:left_padding="20vp"
                    ohos:text="快捷方式"
                    ohos:text_size="50"
                    />
                <ListContainer
                    ohos:id="$+id:dl3"
                    ohos:height="match_content"
                    ohos:width="match_parent"/>
            </DirectionalLayout>
        </ScrollView>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:id="$+id:tab_list"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:above="$id:under_line"
        ohos:visibility="hide"
        ohos:orientation="vertical">

        <Text
            ohos:id="$+id:tx_folder"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:visibility="hide"
            ohos:text="文件夹"
            ohos:text_size="50"
            ohos:text_alignment="center"/>
        <ListContainer
            ohos:id="$+id:lc_list"
            ohos:height="match_parent"
            ohos:width="match_parent"/>
        <DirectionalLayout
            ohos:id="$+id:tx_empt"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:alignment="center"
            ohos:background_element="$color:white"
            ohos:orientation="vertical"
            ohos:visibility="hide">
            <Image
                ohos:height="50vp"
                ohos:width="50vp"
                ohos:padding="10vp"
                ohos:bottom_margin="10vp"
                ohos:image_src="$graphic:ic_folder_white1_24dp"
                ohos:background_element="$graphic:background_radio_button"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="15fp"
                ohos:text="此处无文件"/>
        </DirectionalLayout>
    </DirectionalLayout>

</DependentLayout>