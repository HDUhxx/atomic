<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">


    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:alignment="vertical_center"
        ohos:background_element="$color:windowBackground"
        ohos:layout_alignment="vertical_center"
        ohos:orientation="horizontal">

        <Image
            ohos:id="$+id:main_simple_header_action_close"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:left_padding="10vp"
            ohos:scale_x="3"
            ohos:scale_y="3"
            ohos:layout_alignment="left|vertical_center"
            ohos:image_src="$media:arrow_left"/>


        <Text
            ohos:id="$+id:main_simple_header_action_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_padding="30vp"
            ohos:layout_alignment="center"
            ohos:text="Title"
            ohos:text_color="$color:black_dominant"
            ohos:text_size="50"
            ohos:weight="1.0"/>

        <Component
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:layout_alignment="vertical_center"
            ohos:max_text_lines="1"
            ohos:text_alignment="vertical_center"
            ohos:weight="1.0"/>

    </DirectionalLayout>


</DirectionalLayout>