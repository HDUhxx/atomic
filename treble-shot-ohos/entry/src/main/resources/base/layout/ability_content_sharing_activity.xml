<?xml version="1.0" encoding="utf-8"?>
<StackLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">


    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical">


        <StackLayout
            ohos:id="$+id:action_bar"
            ohos:height="match_content"
            ohos:width="match_parent">

            <DirectionalLayout
                ohos:id="$+id:content_view"
                ohos:height="60vp"
                ohos:width="match_parent"
                ohos:alignment="vertical_center"
                ohos:background_element="$color:windowBackground"
                ohos:layout_alignment="vertical_center"
                ohos:orientation="horizontal">

                <Image
                    ohos:id="$+id:back_header"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:background_element="$color:white"
                    ohos:image_src="$graphic:ic_close_white_24dp"
                    ohos:left_padding="10vp"
                    ohos:right_padding="10vp"/>

                <StackLayout
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:background_element="$color:white"
                    ohos:layout_alignment="vertical_center">

                    <DirectionalLayout
                        ohos:height="match_parent"
                        ohos:width="match_parent"
                        ohos:alignment="vertical_center"
                        ohos:orientation="horizontal">


                        <Text
                            ohos:id="$+id:txt_zero"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:layout_alignment="center"
                            ohos:text="发送"
                            ohos:text_color="$color:black_dominant"
                            ohos:text_size="50"
                            ohos:weight="1.0"/>

                        <TextField
                            ohos:id="$+id:tf_view"
                            ohos:height="match_content"
                            ohos:width="0vp"
                            ohos:layout_alignment="vertical_center"
                            ohos:max_text_lines="1"
                            ohos:text_alignment="vertical_center"
                            ohos:weight="1.0"/>

                        <Image
                            ohos:id="$+id:search_icon1"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:image_src="$graphic:ic_search_white_24dp"
                            ohos:left_padding="10vp"
                            ohos:right_padding="10vp"/>

                        <Image
                            ohos:id="$+id:more_main"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:clickable="false"
                            ohos:image_src="$graphic:ic_more_vert_white_24dp"
                            ohos:left_padding="10vp"
                            ohos:right_padding="10vp"
                            ohos:visibility="invisible"/>

                    </DirectionalLayout>

                    <DirectionalLayout
                        ohos:id="$+id:search_container"
                        ohos:height="match_parent"
                        ohos:width="match_parent"
                        ohos:alignment="vertical_center"
                        ohos:background_element="$color:white"
                        ohos:layout_alignment="vertical_center"
                        ohos:orientation="horizontal"
                        ohos:visibility="hide">


                        <TextField
                            ohos:id="$+id:search_box_control"
                            ohos:height="match_parent"
                            ohos:width="0vp"
                            ohos:basement="$color:dark_colorSelection"
                            ohos:element_left="$graphic:ic_search_white_24dp"
                            ohos:layout_alignment="vertical_center"
                            ohos:left_padding="20vp"
                            ohos:max_text_lines="1"
                            ohos:text_alignment="vertical_center"
                            ohos:text_size="$float:font_size_big"
                            ohos:weight="1"/>

                        <Image
                            ohos:id="$+id:close_icon"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:image_src="$graphic:ic_close_white_24dp"
                            ohos:layout_alignment="vertical_center"
                            ohos:padding="10vp"
                            ohos:scale_mode="zoom_center"
                            ohos:top_padding="1vp"
                            />
                    </DirectionalLayout>

                </StackLayout>

            </DirectionalLayout>
        </StackLayout>

        <TabList
            ohos:id="$+id:tab_list_share"
            ohos:height="40vp"
            ohos:width="match_parent"
            ohos:fixed_mode="true"
            ohos:layout_alignment="center"
            ohos:normal_text_color="#999999"
            ohos:orientation="horizontal"
            ohos:selected_tab_indicator_color="$color:ic_launcher_background"
            ohos:selected_tab_indicator_height="2vp"
            ohos:selected_text_color="$color:black_dominant"
            ohos:tab_length="40vp"
            ohos:tab_margin="5vp"
            ohos:text_alignment="center"
            ohos:text_size="14fp"
            ohos:top_margin="5vp"/>


        <DirectionalLayout
            ohos:id="$+id:shareRroundContainer"
            ohos:height="0vp"
            ohos:width="match_parent"
            ohos:weight="1"/>
    </DirectionalLayout>

    <DependentLayout
        ohos:id="$+id:bottom_header"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout_alignment="bottom">

        <DirectionalLayout
            ohos:height="60vp"
            ohos:width="match_parent"
            ohos:alignment="vertical_center"
            ohos:background_element="$color:windowBackground"
            ohos:layout_alignment="vertical_center"
            ohos:orientation="horizontal">

            <Image
                ohos:id="$+id:action_close"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="$color:white"
                ohos:image_src="$graphic:ic_close_white_24dp"
                ohos:left_padding="10vp"
                ohos:right_padding="10vp"/>


            <Text
                ohos:id="$+id:action_num"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text="1"
                ohos:text_color="$color:black_dominant"
                ohos:text_size="50"
                ohos:weight="1.0"/>

            <Component
                ohos:height="match_content"
                ohos:width="0vp"
                ohos:layout_alignment="vertical_center"
                ohos:max_text_lines="1"
                ohos:text_alignment="vertical_center"
                ohos:weight="1.0"/>

            <Image
                ohos:id="$+id:action_send"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="$graphic:ic_send_white_24dp"
                ohos:image_src="$graphic:ic_send_white_24dp"
                ohos:left_margin="10vp"
                ohos:right_margin="10vp"
                ohos:text="发送"/>

            <Image
                ohos:id="$+id:action_more"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$graphic:ic_more_vert_white_24dp"
                ohos:left_padding="10vp"
                ohos:right_padding="10vp"/>

        </DirectionalLayout>

    </DependentLayout>

</StackLayout>