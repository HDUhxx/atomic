<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$color:windowBackground"
    ohos:orientation="vertical">


    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:alignment="vertical_center"
        ohos:background_element="$color:white"
        ohos:layout_alignment="vertical_center"
        ohos:orientation="horizontal">

        <Image
            ohos:id="$+id:action_close"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$color:white"
            ohos:image_src="$graphic:ic_close_white_24dp"
            ohos:left_padding="10vp"
            ohos:right_padding="10vp"/>


        <Text
            ohos:id="$+id:action_num"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:text="1个文件"
            ohos:text_color="$color:black_dominant"
            ohos:text_size="50"
            ohos:weight="1.0"/>

        <Component
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:layout_alignment="vertical_center"
            ohos:max_text_lines="1"
            ohos:text_alignment="vertical_center"
            ohos:weight="1.0"/>

        <Text
            ohos:id="$+id:actionSend"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:left_padding="10vp"
            ohos:right_padding="10vp"
            ohos:text="$string:butn_send"
            ohos:text_size="16fp"/>

        <Image
            ohos:id="$+id:action_delete"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$graphic:ic_delete_white_24dp"
            ohos:left_padding="10vp"
            ohos:right_padding="10vp"/>

        <Image
            ohos:id="$+id:action_more"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$graphic:ic_more_vert_white_24dp"
            ohos:left_padding="10vp"
            ohos:right_padding="10vp"/>

    </DirectionalLayout>

    <ScrollView
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:weight="1">

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="详细信息"
                ohos:text_color="$color:black_dominant"
                ohos:text_size="16fp"/>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="vertical_center"
                ohos:bottom_padding="6vp"
                ohos:layout_alignment="vertical_center"
                ohos:orientation="horizontal"
                ohos:top_margin="10vp"
                ohos:top_padding="6vp">

                <Image
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$graphic:ic_info_white_24dp"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="vertical_center"
                    ohos:layout_alignment="vertical_center"
                    ohos:left_margin="20vp"
                    ohos:orientation="vertical">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="主目录"
                        ohos:text_color="$color:black_dominant"
                        ohos:text_size="16fp"/>

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:orientation="horizontal">

                        <Text
                            ohos:id="$+id:teSize"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:right_padding="10vp"
                            ohos:text="73M"
                            ohos:text_size="12fp"/>

                        <Text
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="已传输0"
                            ohos:text_size="12fp"/>

                        <Text
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:left_padding="10vp"
                            ohos:right_padding="10vp"
                            ohos:text="共1"
                            ohos:text_size="12fp"/>

                        <Text
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="0%"
                            ohos:text_size="12fp"/>


                    </DirectionalLayout>
                </DirectionalLayout>
            </DirectionalLayout>


            <ListContainer
                ohos:id="$+id:listText"
                ohos:height="0vp"
                ohos:weight="1"
                ohos:width="match_parent"/>

        </DirectionalLayout>
    </ScrollView>

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:layout_alignment="center">

        <Component
            ohos:id="$+id:line"
            ohos:height="0.3vp"
            ohos:width="match_parent"
            ohos:background_element="$color:contentShowingBackground"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:below="$id:line"
            ohos:center_in_parent="true"
            ohos:element_left="$graphic:ic_home_white_24dp"
            ohos:text="主目录"
            ohos:text_alignment="center"
            ohos:text_color="$color:ic_launcher_background"
            ohos:text_size="17fp"/>
    </DependentLayout>


</DirectionalLayout>