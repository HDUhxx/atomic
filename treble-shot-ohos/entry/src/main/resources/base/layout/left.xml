<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    ohos:id="$+id:left_root"
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="horizontal">


    <include
        ohos:height="match_parent"
        ohos:layout="$layout:header_default_device"
        ohos:width="match_content"/>
    <DirectionalLayout
        ohos:id="$+id:right_other"
        ohos:height="match_parent"
        ohos:width="0"
        ohos:weight="1.0"
        ohos:background_element="#250000ff"
        ohos:orientation="vertical">

    </DirectionalLayout>


</DirectionalLayout>