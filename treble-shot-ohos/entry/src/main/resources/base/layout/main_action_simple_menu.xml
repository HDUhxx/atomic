<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:layout_alignment="right"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="vertical_center"
        ohos:background_element="$graphic:background_text_white"
        ohos:left_margin="60vp"
        ohos:right_margin="60vp"
        ohos:layout_alignment="vertical_center"
        ohos:orientation="vertical">
        <Text
            ohos:id="$+id:main_simple_menuaction_text1"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:top_margin="20vp"
            ohos:left_padding="30vp"
            ohos:layout_alignment="center"
            ohos:text="Visit web page"
            ohos:text_color="$color:black_dominant"
            ohos:text_size="50"
            ohos:weight="1.0"/>


        <Text
            ohos:id="$+id:main_simple_menuaction_text2"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:top_margin="20vp"
            ohos:left_padding="30vp"
            ohos:layout_alignment="center"
            ohos:bottom_margin="20vp"
            ohos:text="Go to licence URL"
            ohos:text_color="$color:black_dominant"
            ohos:text_size="50"
            ohos:weight="1.0"/>


    </DirectionalLayout>


</DirectionalLayout>