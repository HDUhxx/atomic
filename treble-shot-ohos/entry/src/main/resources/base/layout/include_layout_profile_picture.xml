<?xml version="1.0" encoding="utf-8"?>
<StackLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"

    ohos:width="60vp"
    ohos:height="60vp"
    ohos:bottom_margin="15vp">

    <Image
        ohos:id="$+id:layout_profile_picture_image_default"
        ohos:width="match_parent"
        ohos:height="match_parent" />

    <Image
        ohos:id="$+id:layout_profile_picture_image_preferred"
        ohos:width="match_parent"
        ohos:height="match_parent"
        ohos:background_element="#6655ee" />

    <Image
        ohos:width="24vp"
        ohos:height="24vp"
        ohos:layout_alignment="right|bottom"
        ohos:background_element="$graphic:ic_edit_white_24dp"
        ohos:padding="3vp"/>

</StackLayout>
