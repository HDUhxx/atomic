<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"

    ohos:width="match_parent"
    ohos:height="match_parent">

    <StackLayout
        ohos:id="$+id:mainContainer"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:center_in_parent="true"
        ohos:top_margin="24vp"
        ohos:bottom_margin="24vp"
        ohos:alignment="center"
        ohos:orientation="vertical">
        <Image
            ohos:id="$+id:layout_welcome_page_3_perm_ok_image"
            ohos:width="40vp"
            ohos:height="40vp"
            ohos:image_src="$graphic:ic_check_white_24dp"/>
<!--            ohostint="?colorSecondary" />-->

        <Button
            ohos:id="$+id:layout_welcome_page_3_request_button"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:padding="10vp"
            ohos:left_padding="20vp"
            ohos:right_padding="20vp"
            ohos:text_color="$color:white"
            ohos:visibility="hide"
            ohos:background_element="$graphic:background_radio_button"
            ohos:top_margin="12vp"
            ohos:bottom_margin="12vp"
            ohos:text_size="15vp"
            ohos:text="$string:butn_setUp" />

    </StackLayout>

    <Text
        ohos:text_alignment="center"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:above="$id:mainContainer"
        ohos:align_parent_top="true"
        ohos:alignment="center"
        ohos:background_element="#fff0000"
        ohos:text="$string:text_introSetUpPermissions"
        ohos:text_size="$float:font_size_title" />

</DependentLayout>