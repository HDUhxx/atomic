<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:height="60vp"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="这个页面显示Intent传递过来的参数"
        ohos:text_size="50"
        ohos:top_margin="20vp"
        ohos:start_padding="20vp"
        ohos:end_padding="20vp"
        />
    <Text
        ohos:id="$+id:show_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_text"
        ohos:layout_alignment="horizontal_center"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:multiple_lines="true"
        ohos:text_size="50"
        ohos:top_margin="20vp"
        ohos:start_margin="10vp"
        ohos:end_margin="10vp"
        />


</DirectionalLayout>