<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:padding="16vp"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:scratch_text"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:padding="10vp"
        ohos:text_size="14fp"
        ohos:background_element="$graphic:btn_bg"
        ohos:text="$string:scratch_text_view_demo" />

    <Button
        ohos:id="$+id:scratch_image"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:top_margin="10vp"
        ohos:text_size="14fp"
        ohos:padding="10vp"
        ohos:background_element="$graphic:btn_bg"
        ohos:text="$string:scratch_image_view_demo" />

</DirectionalLayout>