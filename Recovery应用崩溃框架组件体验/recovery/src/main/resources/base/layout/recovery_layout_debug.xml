<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$color:recovery_background"
    ohos:orientation="vertical">

    <include
        ohos:height="55vp"
        ohos:width="match_parent"
        ohos:layout="$layout:layout_title_bar"/>

    <ScrollView
        ohos:id="$+id:scrollView"
        ohos:height="match_parent"
        ohos:width="match_parent">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:padding="15vp">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="Exception"
                ohos:text_color="#A6A6A6"
                ohos:text_font="sans-serif"
                ohos:text_size="15fp"/>

            <Component
                ohos:height="0.5vp"
                ohos:width="match_parent"
                ohos:background_element="#333333"
                ohos:top_margin="10vp"/>

            <Text
                ohos:id="$+id:tv_type"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="ExceptionType: "
                ohos:text_color="$color:recovery_textColor_sub"
                ohos:text_font="sans-serif"
                ohos:text_size="15fp"
                ohos:top_margin="10vp"
                ohos:truncation_mode="ellipsis_at_end"/>

            <Text
                ohos:id="$+id:tv_class_name"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="ClassName: "
                ohos:text_color="$color:recovery_textColor_sub"
                ohos:text_size="15fp"
                ohos:top_margin="10vp"
                ohos:truncation_mode="ellipsis_at_end"/>

            <Text
                ohos:id="$+id:tv_method_name"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="MethodName: "
                ohos:text_color="$color:recovery_textColor_sub"
                ohos:text_size="15fp"
                ohos:top_margin="10vp"
                ohos:truncation_mode="ellipsis_at_end"/>


            <Text
                ohos:id="$+id:tv_line_number"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="LineNumber: "
                ohos:text_color="$color:recovery_textColor_sub"
                ohos:text_size="15fp"
                ohos:top_margin="10vp"
                ohos:truncation_mode="ellipsis_at_end"/>


            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="Cause"
                ohos:text_color="#A6A6A6"
                ohos:text_font="sans-serif"
                ohos:text_size="15fp"
                ohos:top_margin="10vp"/>

            <Component
                ohos:height="0.5vp"
                ohos:width="match_parent"
                ohos:background_element="#333333"
                ohos:top_margin="10vp"/>

            <Text
                ohos:id="$+id:tv_cause"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:multiple_lines="true"
                ohos:text="--"
                ohos:text_color="$color:recovery_textColor_sub"
                ohos:text_size="15fp"
                ohos:top_margin="10vp"
                ohos:truncation_mode="ellipsis_at_end"/>


            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="StackTrace"
                ohos:text_color="#A6A6A6"
                ohos:text_font="sans-serif"
                ohos:text_size="15fp"
                ohos:top_margin="16vp"/>

            <Component
                ohos:height="0.5vp"
                ohos:width="match_parent"
                ohos:background_element="#333333"
                ohos:top_margin="10vp"/>

            <Text
                ohos:id="$+id:tv_stack_trace"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:multiple_lines="true"
                ohos:text="--"
                ohos:text_color="$color:recovery_textColor_sub"
                ohos:text_size="15fp"
                ohos:top_margin="10vp"
                ohos:truncation_mode="ellipsis_at_end"/>


        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>