<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    >

    <DirectionalLayout
        ohos:id="$+id:dl_dialog_layout_main"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:background_element="$graphic:background_dialog"
        ohos:left_padding="20vp"
        ohos:margin="25vp"
        ohos:orientation="vertical"
        ohos:right_padding="20vp"
        >

        <Text
            ohos:id="$+id:text_dialog_layout_title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:margin="15vp"
            ohos:text="$string:recovery_dialog_tips"
            ohos:text_color="#000000"
            ohos:text_size="18fp"/>

        <Text
            ohos:id="$+id:text_dialog_layout_content"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:multiple_lines="true"
            ohos:text="$string:recovery_dialog_tips_msg"
            ohos:text_color="#000000"
            ohos:text_size="15fp"
            ohos:top_margin="10vp"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="right"
            ohos:orientation="horizontal"
            >

            <Button
                ohos:id="$+id:btn_dialog_layout_cancel"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:right_margin="20vp"
                ohos:bottom_padding="20vp"
                ohos:top_padding="15vp"
                ohos:text="$string:recovery_dialog_cancel"
                ohos:text_color="#BFBFBF"
                ohos:text_size="14fp"/>

            <Button
                ohos:id="$+id:btn_dialog_layout_confirm"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:bottom_padding="20vp"
                ohos:text="$string:recovery_dialog_sure"
                ohos:text_color="#BFBFBF"
                ohos:text_size="14fp"
                ohos:top_padding="15vp"/>

        </DirectionalLayout>


    </DirectionalLayout>


</DirectionalLayout>