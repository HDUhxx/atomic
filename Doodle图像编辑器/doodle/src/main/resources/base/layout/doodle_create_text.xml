<?xml version="1.0" encoding="utf-8"?>
<StackLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    >

    <DirectionalLayout
        ohos:id="$+id:doodle_dir_bottom"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout_alignment="bottom"
        ohos:bottom_margin="00vp"
        ohos:orientation="vertical">

        <TextField
            ohos:id="$+id:doodle_selectable_edit"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:min_height="50vp"
            ohos:background_element="$color:color_88"
            ohos:layout_alignment="bottom"
            ohos:padding="10vp"
            ohos:text_color="$color:color_ff"
            ohos:text_size="30fp"
            ohos:bubble_width="0"
            ohos:bubble_height="0"/>


        <StackLayout
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:background_element="$color:color_ff"
            ohos:clickable="true"
            ohos:layout_alignment="bottom"
            ohos:left_padding="5vp"
            ohos:right_padding="5vp">

            <Text
                ohos:id="$+id:doodle_text_cancel_btn"
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:layout_alignment="bottom|left"
                ohos:padding="10vp"
                ohos:text="$string:doodle_cancel"
                ohos:text_alignment="center"
                ohos:text_color="#232323"
                ohos:text_size="16fp"/>

            <Text
                ohos:id="$+id:doodle_text_enter_btn"
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:layout_alignment="bottom|right"
                ohos:padding="10vp"
                ohos:text="$string:doodle_enter"
                ohos:text_alignment="center"
                ohos:text_color="#232323"
                ohos:text_size="16fp"/>
        </StackLayout>

    </DirectionalLayout>
</StackLayout>