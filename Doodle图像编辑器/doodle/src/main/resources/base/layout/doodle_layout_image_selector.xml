<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#dddddd"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:id="$+id:toolbar"
        ohos:height="45vp"
        ohos:width="match_parent"
        ohos:background_element="$color:color_ff">

        <DependentLayout
            ohos:height="45vp"
            ohos:width="match_parent">

            <Button
                ohos:id="$+id:btn_back"
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:left_margin="10vp"
                ohos:text="$string:doodle_cancel"
                ohos:text_alignment="vertical_center"
                ohos:text_color="$color:color_transparent"
                ohos:text_size="16fp"
                 />

            <Text
                ohos:height="45vp"
                ohos:width="match_content"
                ohos:center_in_parent="true"
                ohos:text="$string:doodle_select_image"
                ohos:text_alignment="center"
                ohos:text_color="$color:color_black"
                ohos:text_size="18fp" />

            <Button
                ohos:id="$+id:btn_enter"
                ohos:height="45vp"
                ohos:width="match_content"
                ohos:align_parent_right="true"
                ohos:right_margin="10vp"
                ohos:text="$string:doodle_enterzero"
                ohos:text_alignment="center"
                ohos:text_color="$color:color_black"
                ohos:text_size="16fp"
                 />

        </DependentLayout>
    </DependentLayout>

    <StackLayout
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:below="$id:toolbar"
        ohos:background_element="#aaaaaa" />
    <Text
        ohos:id="$+id:loading"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:text="加载中..."
        ohos:text_alignment="center"
        ohos:text_color="$color:color_2b"
        ohos:layout_alignment="center"
        ohos:text_size="20fp" />

    <ListContainer
        ohos:below="$id:toolbar"
        ohos:id="$+id:doodle_list_image"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:right_padding="3vp"
        />
</DependentLayout>