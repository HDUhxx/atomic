<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <StackLayout
        ohos:id="$+id:container_simple_doodle"
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:background_element="$color:color_9bcd9b"
        ohos:weight="1">

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="$string:simple_doodle"
            ohos:text_alignment="horizontal_center"
            ohos:text_color="$color:white"
            ohos:text_size="12fp"
            ohos:top_margin="5vp" />
    </StackLayout>

    <StackLayout
        ohos:id="$+id:container_middle_doodle"
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:background_element="$color:color_9ac0cd"
        ohos:weight="1.5">

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="$string:middle_doodle"
            ohos:text_alignment="horizontal_center"
            ohos:text_color="$color:white"
            ohos:text_size="12fp"
            ohos:top_margin="5vp" />
    </StackLayout>

    <StackLayout
        ohos:id="$+id:container_advanced_doodle"
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:background_element="$color:color_8b7765"
        ohos:weight="2">

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="$string:advanced_doodle"
            ohos:text_alignment="horizontal_center"
            ohos:text_color="$color:white"
            ohos:text_size="12fp"
            ohos:top_margin="5vp" />
    </StackLayout>
</DirectionalLayout>