<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="style"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#b8babc"
    ohos:orientation="vertical">


    <com.daimajia.swipe.SwipeLayout
        ohos:margin="10vp"
        ohos:id="$+id:swipe1"
        ohos:width="match_parent"
        ohos:height="80vp"
        app:clickToClose="true"> 
        
        <DirectionalLayout
            ohos:id="$+id:bottom_wrapper"
            ohos:height="match_parent"
            ohos:orientation="horizontal"
            ohos:width="160vp">
            <Text
                ohos:height="match_parent"
                ohos:width="80vp"
                ohos:id="$+id:archive"
                ohos:text="Archive"
                ohos:text_alignment="center"
                ohos:text_color="white"
                ohos:text_size="15vp"
                ohos:background_element="red"/>
            <Text
                ohos:height="match_parent"
                ohos:width="80vp"
                ohos:id="$+id:delete"
                ohos:text="Delete"
                ohos:text_alignment="center"
                ohos:text_color="black"
                ohos:text_size="15vp"
                ohos:background_element="#C7C7CC"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:orientation="horizontal"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:id="$+id:bottom_wrapper2">
            <Image
                ohos:height="match_parent"
                ohos:width="70vp"
                ohos:id="$+id:magnifier2"
                ohos:background_element="#f7e79c"
                ohos:image_src="$media:magnifier"
                ohos:scale_mode="zoom_center"
                ohos:left_padding="25vp"
                ohos:right_padding="25vp"/>
            <Image
                ohos:height="match_parent"
                ohos:width="70vp"
                ohos:id="$+id:star2"
                ohos:background_element="#4cd964"
                ohos:image_src="$media:star"
                ohos:scale_mode="zoom_center"
                ohos:left_padding="25vp"
                ohos:right_padding="25vp"/>
            <Image
                ohos:height="match_parent"
                ohos:width="70vp"
                ohos:id="$+id:trash2"
                ohos:background_element="red"
                ohos:image_src="$media:trash"
                ohos:scale_mode="zoom_center"
                ohos:left_padding="25vp"
                ohos:right_padding="25vp"/>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:starbott"
            ohos:height="match_parent"
            ohos:width="match_parent">
            <DependentLayout
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:id="$+id:bottom_wrapper_child1"
                ohos:background_element="#4C535B">
                <Image
                    ohos:scale_mode="zoom_center"
                    ohos:height="20vp"
                    ohos:width="20vp"
                    ohos:id="$+id:star"
                    ohos:align_parent_top="true"
                    ohos:horizontal_center="true"
                    ohos:image_src="$media:star"
                    />

            </DependentLayout>

        </DirectionalLayout>


        <Text
            ohos:padding="10vp"
            ohos:background_element="white"
            ohos:text_size="15vp"
            ohos:multiple_lines="true"
            ohos:text="要有最樸素的生活和最遙遠的夢想，即使明天天寒地凍，山高水遠，路遠馬亡。"
            ohos:width="match_parent"
            ohos:height="match_parent" />
    </com.daimajia.swipe.SwipeLayout>

    <com.daimajia.swipe.SwipeLayout
        ohos:margin="10vp"
        ohos:id="$+id:swipe2"
        ohos:width="match_parent"
        ohos:height="80vp">

        <DirectionalLayout
            ohos:orientation="horizontal"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:id="$+id:Bottom2">
            <Image
                ohos:height="match_parent"
                ohos:width="70vp"
                ohos:id="$+id:magnifier"
                ohos:background_element="#f7e79c"
                ohos:image_src="$media:magnifier"
                ohos:scale_mode="zoom_center"
                ohos:left_padding="25vp"
                ohos:right_padding="25vp"/>
            <Image
                ohos:height="match_parent"
                ohos:width="70vp"
                ohos:id="$+id:star3"
                ohos:background_element="#4cd964"
                ohos:image_src="$media:star"
                ohos:scale_mode="zoom_center"
                ohos:left_padding="25vp"
                ohos:right_padding="25vp"/>
            <Image
                ohos:height="match_parent"
                ohos:width="70vp"
                ohos:id="$+id:trash"
                ohos:background_element="red"
                ohos:image_src="$media:trash"
                ohos:scale_mode="zoom_center"
                ohos:left_padding="25vp"
                ohos:right_padding="25vp"/>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:padding="10vp"
            ohos:orientation="vertical"
            ohos:background_element="white">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="理解（りかい）されるということは、一種（いっしゅ）の贅沢（ぜいたく）である。"
                ohos:multiple_lines="true"
                ohos:text_size="15vp"/>

        </DirectionalLayout>

    </com.daimajia.swipe.SwipeLayout>

    <com.daimajia.swipe.SwipeLayout
        ohos:margin="10vp"
        ohos:id="$+id:swipe3"
        ohos:width="match_parent"
        ohos:height="80vp">

        <DirectionalLayout
            ohos:id="$+id:Bottom3"
            ohos:height="match_parent"
            ohos:width="match_parent">
            <DependentLayout
                ohos:id="$+id:bottom_wrapper_child2"
                ohos:background_element="#bdbec2"
                ohos:height="match_parent"
                ohos:width="match_parent">
                <Image
                    ohos:id="$+id:star4"
                    ohos:align_parent_top="true"
                    ohos:horizontal_center="true"
                    ohos:image_src="$media:star"
                    ohos:scale_mode="zoom_center"
                    ohos:height="20vp"
                    ohos:width="20vp"/>
            </DependentLayout>
        </DirectionalLayout>
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text_size="15vp"
            ohos:background_element="white"
            ohos:padding="10vp"
            ohos:text="None is of freedom or of life deserving unless he daily conquers it anew."/>
    </com.daimajia.swipe.SwipeLayout>


    <Text
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:background_element="#7d7d7d"
        ohos:id="$+id:gotolist"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="black"
        ohos:text_size="15vp"
        ohos:text="listContainer"/>

    <Text
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:background_element="#7d7d7d"
        ohos:id="$+id:gotogrid"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="black"
        ohos:text_size="15vp"
        ohos:text="gridView"/>
</DirectionalLayout>