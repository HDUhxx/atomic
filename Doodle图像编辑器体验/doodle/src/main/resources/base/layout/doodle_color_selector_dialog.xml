<?xml version="1.0" encoding="utf-8"?>
<StackLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/apk/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$color:color_transparent">

    <DirectionalLayout
        ohos:id="$+id:doodle_color_selector_container"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="horizontal_center"
        ohos:clickable="true"
        ohos:layout_alignment="center"
        ohos:orientation="vertical">

        <DirectionalLayout
            ohos:id="$+id:doodle_shader_container"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal">

            <Image
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:background_element="$color:color_ff"
                ohos:image_src="$media:doodle_shader1"
                ohos:padding="1vp"
                ohos:scale_mode="clip_center" />

            <Image
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:background_element="$color:color_ff"
                ohos:image_src="$media:doodle_shader2"
                ohos:left_margin="5vp"
                ohos:padding="1vp"
                ohos:scale_mode="clip_center" />

            <Image
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:background_element="$color:color_ff"
                ohos:image_src="$media:doodle_shader3"
                ohos:left_margin="5vp"
                ohos:padding="1vp"
                ohos:scale_mode="clip_center" />

            <Image
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:background_element="$color:color_ff"
                ohos:image_src="$media:doodle_shader4"
                ohos:left_margin="5vp"
                ohos:padding="1vp"
                ohos:scale_mode="clip_center" />

            <Image
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:background_element="$color:color_ff"
                ohos:image_src="$media:doodle_shader5"
                ohos:left_margin="5vp"
                ohos:padding="1vp"
                ohos:scale_mode="clip_center" />
        </DirectionalLayout>

        <TextField
            ohos:id="$+id:doodle_txtview_size"
            ohos:height="30vp"
            ohos:width="match_parent"
            ohos:background_element="$color:color_transparent"
            ohos:padding="5vp"
            ohos:text="9999"
            ohos:text_alignment="center"
            ohos:text_color="$color:color_ff"
            ohos:text_input_type="pattern_number"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"
            ohos:bubble_width="0"
            ohos:bubble_height="0"/>

        <DirectionalLayout
            ohos:id="$+id:doodle_txtview_reduce"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            ohos:top_margin="10vp">

            <Text
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:layout_alignment="vertical_center"
                ohos:text="-"
                ohos:text_alignment="center"
                ohos:text_color="$color:color_ff"
                ohos:text_size="14fp" />

            <Slider
                ohos:id="$+id:doodle_color_seekbar_size"
                ohos:height="33vp"
                ohos:width="260vp"
                ohos:max="100"
                ohos:max_height="33vp"
                ohos:min_height="33vp"
                ohos:background_element="$graphic:doodle_seekbar_bg"
                ohos:progress_color="#00BFFF"
                ohos:thumb_element="$graphic:doodle_thumb_seekbarr"
                />

            <Text
                ohos:id="$+id:doodle_txtview_add"
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:layout_alignment="vertical_center"
                ohos:text="+"
                ohos:text_alignment="center"
                ohos:text_color="$color:color_ff"
                ohos:text_size="14fp" />

        </DirectionalLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:dooble_bottom_color"
        ohos:height="match_content"
        ohos:layout_alignment="bottom"
        ohos:width="match_parent"
        ohos:bottom_margin="50vp"
        ohos:background_element="$color:color_88"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:dialog_enter_btn_01"
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:background_element="$color:color_transparent"
            ohos:layout_alignment="horizontal_center"
            ohos:text="$string:doodle_cancel"
            ohos:text_alignment="center"
            ohos:text_color="#bebebe"
            ohos:text_size="20fp"
            ohos:weight="1"
            app:stv_text_color_pressed="#88bebebe" />

        <Text
            ohos:id="$+id:dialog_enter_btn_02"
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:background_element="$color:color_transparent"
            ohos:layout_alignment="horizontal_center"
            ohos:text="$string:doodle_enter"
            ohos:text_alignment="center"
            ohos:text_color="#11cfff"
            ohos:text_size="20fp"
            ohos:weight="1" />
    </DirectionalLayout>
</StackLayout>