<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/res/app"
    xmlns:tools="http://schemas.huawei.com/res/tools"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="#232323"
    ohos:top_padding="40vp">
    <StackLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#181818">

        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:alignment="vertical_center"
            ohos:orientation="horizontal">

            <com.example.doodle.views.MaskImageView
                ohos:id="$+id:doodle_btn_back"
                ohos:height="match_content"
                ohos:width="40vp"
                ohos:image_src="$media:doodle_btn_back"
                ohos:scale_mode="zoom_center"
                ohos:visibility="visible"
                app:miv_is_ignore_alpha="true"
                app:miv_mask_color="#a8a8a8" />

            <StackLayout
                ohos:height="match_parent"
                ohos:width="1vp"
                ohos:background_element="#101010"
                ohos:bottom_margin="15vp"
                ohos:top_margin="15vp" />

            <Text
                ohos:id="$+id:doodle_txt_title"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:left_margin="12vp"
                ohos:max_text_lines="1"
                ohos:text="$string:Hellodoodle"
                ohos:text_alignment="vertical_center"
                ohos:text_color="#ffffff"
                ohos:text_size="18vp"
                ohos:truncation_mode="ellipsis_at_end"
                ohos:weight="1" />

            <com.example.doodle.views.MaskImageView
                ohos:id="$+id:doodle_btn_rotate"
                ohos:height="match_parent"
                ohos:width="40vp"
                ohos:image_src="$media:doodle_rotate"
                ohos:scale_mode="zoom_center"
                app:miv_is_ignore_alpha="true"
                app:miv_mask_color="#a8a8a8" />

            <com.example.doodle.views.MaskImageView
                ohos:id="$+id:doodle_btn_hide_panel"
                ohos:height="match_parent"
                ohos:width="40vp"
                ohos:bottom_margin="13vp"
                ohos:image_src="$media:doodle_hide_panel"
                ohos:scale_mode="zoom_center"
                ohos:top_margin="13vp"
                ohos:visibility="visible"
                app:miv_is_ignore_alpha="true"
                app:miv_mask_color="#a8a8a8" />

            <com.example.doodle.views.MaskImageView
                ohos:id="$+id:doodle_btn_finish"
                ohos:height="match_parent"
                ohos:width="40vp"
                ohos:image_src="$media:doodle_btn_finish"
                ohos:scale_mode="zoom_center"
                ohos:visibility="visible"
                app:miv_is_ignore_alpha="true"
                app:miv_mask_color="#a8a8a8" />
        </DirectionalLayout>

    </StackLayout>

    <StackLayout
        ohos:height="match_parent"
        ohos:width="match_parent">
    <StackLayout
        ohos:id="$+id:doodle_container"
        ohos:height="match_parent"
        ohos:width="match_parent" />

    <StackLayout
        ohos:id="$+id:doodle_panel"
        ohos:height="match_parent"
        ohos:width="match_parent"
        >

        <StackLayout
            ohos:id="$+id:st_menu"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:padding="5vp">

            <DirectionalLayout
                ohos:id="$+id:st_menu_left"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:orientation="vertical">

                <DirectionalLayout
                    ohos:id="$+id:pen_container"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:bottom_margin="5vp"
                    ohos:clickable="true"
                    ohos:orientation="horizontal">

                    <Image
                        ohos:id="$+id:btn_pen_hand"
                        ohos:height="32vp"
                        ohos:width="32vp"
                        ohos:background_element="$graphic:doodle_btn_effect_round"
                        ohos:image_src="$media:doodle_ic_pen"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center"
                        ohos:visibility="visible" />

                    <Image
                        ohos:id="$+id:btn_pen_mosaic"
                        ohos:height="32vp"
                        ohos:width="32vp"
                        ohos:background_element="$graphic:doodle_btn_effect_round"
                        ohos:image_src="$media:doodle_ic_mosaic"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center"
                        ohos:visibility="visible" />

                    <Image
                        ohos:id="$+id:btn_pen_copy"
                        ohos:height="32vp"
                        ohos:width="32vp"
                        ohos:background_element="$graphic:doodle_btn_effect_round"
                        ohos:image_src="$media:doodle_ic_copy"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center"
                        ohos:visibility="visible" />

                    <Image
                        ohos:id="$+id:btn_pen_eraser"
                        ohos:height="32vp"
                        ohos:width="32vp"
                        ohos:background_element="$graphic:doodle_btn_effect_round"
                        ohos:image_src="$media:doodle_ic_eraser"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center"
                        ohos:visibility="visible" />

                    <Image
                        ohos:id="$+id:btn_pen_text"
                        ohos:height="32vp"
                        ohos:width="32vp"
                        ohos:background_element="$graphic:doodle_btn_effect_round"
                        ohos:image_src="$media:doodle_ic_text"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center"
                        ohos:visibility="visible" />

                    <Image
                        ohos:id="$+id:btn_pen_bitmap"
                        ohos:height="32vp"
                        ohos:width="32vp"
                        ohos:background_element="$graphic:doodle_btn_effect_round"
                        ohos:image_src="$media:doodle_ic_texture"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center"
                        ohos:visibility="visible" />
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:id="$+id:shape_container"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:bottom_margin="5vp"
                    ohos:clickable="true"
                    ohos:orientation="horizontal">

                    <Image
                        ohos:id="$+id:btn_hand_write"
                        ohos:height="30vp"
                        ohos:width="30vp"
                        ohos:background_element="$graphic:doodle_btn_effect_rect_line"
                        ohos:image_src="$media:doodle_ic_handwrite"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center" />

                    <Image
                        ohos:id="$+id:btn_arrow"
                        ohos:height="30vp"
                        ohos:width="30vp"
                        ohos:background_element="$graphic:doodle_btn_effect_rect_line"
                        ohos:image_src="$media:doodle_ic_arrow"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center" />

                    <Image
                        ohos:id="$+id:btn_line"
                        ohos:height="30vp"
                        ohos:width="30vp"
                        ohos:background_element="$graphic:doodle_btn_effect_rect_line"
                        ohos:image_src="$media:doodle_ic_line"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center" />

                    <Image
                        ohos:id="$+id:btn_holl_circle"
                        ohos:height="30vp"
                        ohos:width="30vp"
                        ohos:background_element="$graphic:doodle_btn_effect_rect_line"
                        ohos:image_src="$media:doodle_ic_hollow_circle"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center" />

                    <Image
                        ohos:id="$+id:btn_fill_circle"
                        ohos:height="30vp"
                        ohos:width="30vp"
                        ohos:background_element="$graphic:doodle_btn_effect_rect_line"
                        ohos:image_src="$media:doodle_ic_fill_circle"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center" />

                    <Image
                        ohos:id="$+id:btn_holl_rect"
                        ohos:height="30vp"
                        ohos:width="30vp"
                        ohos:background_element="$graphic:doodle_btn_effect_rect_line"
                        ohos:image_src="$media:doodle_ic_hollow_rect"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center" />

                    <Image
                        ohos:id="$+id:btn_fill_rect"
                        ohos:height="30vp"
                        ohos:width="30vp"
                        ohos:image_src="$media:doodle_ic_fill_rect"
                        ohos:background_element="$graphic:doodle_btn_effect_rect_line"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center" />
                </DirectionalLayout>

                <StackLayout
                    ohos:id="$+id:size_container"
                    ohos:height="40vp"
                    ohos:width="match_content"
                    ohos:left_margin="5vp"
                    ohos:orientation="vertical">

                      <Slider
                        ohos:id="$+id:doodle_seekbar_size"
                        ohos:height="33vp"
                        ohos:width="260vp"
                        ohos:background_element="$graphic:doodle_seekbar_bg"
                        ohos:max="100"
                        ohos:max_height="33vp"
                        ohos:min_height="33vp"
                        ohos:progress_color="#00BFFF"
                        ohos:thumb_element="$graphic:doodle_thumb_seekbarr" />

                    <Text
                        ohos:id="$+id:paint_size_text"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:background_element="#88444444"
                        ohos:layout_alignment="horizontal_center"
                        ohos:left_padding="3vp"
                        ohos:right_padding="3vp"
                        ohos:text=""
                        ohos:text_alignment="center"
                        ohos:text_color="#ffffff"
                        ohos:text_size="12vp" />
                </StackLayout>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:st_menu_right"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:alignment="right"
                ohos:layout_alignment="right"
                ohos:orientation="vertical">

                <DirectionalLayout
                    ohos:height="32vp"
                    ohos:width="match_content"
                    ohos:bottom_margin="5vp"
                    ohos:clickable="true"
                    ohos:orientation="horizontal">

                    <Image
                        ohos:id="$+id:doodle_btn_brush_edit"
                        ohos:height="32vp"
                        ohos:width="32vp"
                        ohos:background_element="$graphic:doodle_btn_effect_round"
                        ohos:bottom_margin="5vp"
                        ohos:image_src="$media:doodle_ic_move"
                        ohos:padding="5vp"
                        ohos:right_margin="5vp"
                        ohos:scale_mode="clip_center"
                        ohos:visibility="visible" />

                    <Image
                        ohos:id="$+id:btn_zoomer"
                        ohos:height="32vp"
                        ohos:width="32vp"
                        ohos:background_element="$graphic:doodle_btn_effect_round"
                        ohos:image_src="$media:doodle_ic_zoomer"
                        ohos:scale_mode="clip_center" />
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:orientation="horizontal">

                    <Image
                        ohos:id="$+id:btn_undo"
                        ohos:height="32vp"
                        ohos:width="32vp"
                        ohos:background_element="$graphic:doodle_btn_effect_round"
                        ohos:image_src="$media:doodle_ic_undo"
                        ohos:scale_mode="clip_center" />

                    <Image
                        ohos:id="$+id:btn_redo"
                        ohos:height="32vp"
                        ohos:width="32vp"
                        ohos:background_element="$graphic:doodle_btn_effect_round"
                        ohos:image_src="$media:doodle_ic_undo"
                        ohos:left_margin="5vp"
                        ohos:scale_mode="clip_center"
                        ohos:scale_x="-1"
                        ohos:visibility="hide"
                         />
<!--                    tools:visibility="visible"-->
                </DirectionalLayout>

                <StackLayout
                    ohos:id="$+id:btn_set_color_container"
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:background_element="$graphic:doodle_btn_red_right"
                    ohos:padding="2vp"
                    ohos:top_margin="5vp">

                    <Component
                        ohos:id="$+id:btn_set_color"
                        ohos:height="match_parent"
                        ohos:width="match_parent"
                        ohos:background_element="#ff0000" />
                </StackLayout>
            </DirectionalLayout>

        </StackLayout>

        <DirectionalLayout
            ohos:id="$+id:doodle_selectable_edit_container"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="center"
            ohos:layout_alignment="bottom"
            ohos:orientation="vertical"
            ohos:visibility="visible">

            <Text
                ohos:id="$+id:item_scale"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="#88444444"
                ohos:bottom_margin="5vp"
                ohos:layout_alignment="horizontal_center"
                ohos:left_padding="3vp"
                ohos:min_width="40vp"
                ohos:padding="5vp"
                ohos:right_padding="3vp"
                ohos:text="100%"
                ohos:text_alignment="center"
                ohos:text_color="#ffffff"
                ohos:text_size="12fp" />

            <DirectionalLayout
                ohos:height="50vp"
                ohos:width="match_parent"
                ohos:background_element="#88000000"
                ohos:orientation="horizontal">

                <Text
                    ohos:id="$+id:doodle_selectable_edit"
                    ohos:height="match_parent"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:doodle_btn_effect_rect_pressed_black"
                    ohos:text="$string:doodle_edit"
                    ohos:text_alignment="center"
                    ohos:text_color="#ffffff"
                    ohos:text_size="16fp"
                    ohos:weight="1" />

                <Text
                    ohos:id="$+id:doodle_selectable_bottom"
                    ohos:height="match_parent"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:doodle_btn_effect_rect_pressed_black"
                    ohos:text="$string:doodle_bottom"
                    ohos:text_alignment="center"
                    ohos:text_color="#ffffff"
                    ohos:text_size="16vp"
                    ohos:weight="1" />

                <Text
                    ohos:id="$+id:doodle_selectable_top"
                    ohos:height="match_parent"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:doodle_btn_effect_rect_pressed_black"
                    ohos:text="$string:doodle_top"
                    ohos:text_alignment="center"
                    ohos:text_color="#ffffff"
                    ohos:text_size="16vp"
                    ohos:weight="1" />

                <Text
                    ohos:id="$+id:doodle_selectable_remove"
                    ohos:height="match_parent"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:doodle_btn_effect_rect_pressed_black"
                    ohos:text="$string:doodle_remove"
                    ohos:text_alignment="center"
                    ohos:text_color="#ffffff"
                    ohos:text_size="16vp"
                    ohos:weight="1" />
            </DirectionalLayout>
        </DirectionalLayout>

        <!-- mosaic menu-->
        <DirectionalLayout
            ohos:id="$+id:mosaic_menu"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="vertical_center"
            ohos:orientation="vertical">

            <Button
                ohos:id="$+id:btn_mosaic_level1"
                ohos:height="30vp"
                ohos:width="35vp"
                ohos:text_size="15fp"
                ohos:background_element="$graphic:doodle_btn_effect_rect_line"
                ohos:bottom_margin="3vp"
                ohos:text="x1" />

            <Button
                ohos:id="$+id:btn_mosaic_level2"
                ohos:height="30vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:doodle_btn_effect_rect_line"
                ohos:text_size="15fp"
                ohos:bottom_margin="3vp"
                ohos:text="x2" />

            <Button
                ohos:id="$+id:btn_mosaic_level3"
                ohos:height="30vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:doodle_btn_effect_rect_line"
                ohos:bottom_margin="3vp"
                ohos:text_size="15fp"
                ohos:text="x3" />
        </DirectionalLayout>
    </StackLayout>
    </StackLayout>
</DirectionalLayout>