<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#232323"
    ohos:padding="16vp">

    <Button
        ohos:id="$+id:btn_select_image"
        ohos:height="35vp"
        ohos:width="55vp"
        ohos:background_element="$graphic:state_containertest"
        ohos:text="$string:doodle_select_image"
        ohos:text_size="12fp" />

    <Text
        ohos:id="$+id:img_path"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_bottom="$id:btn_select_image"
        ohos:left_margin="10vp"
        ohos:right_of="$id:btn_select_image"
        ohos:text_color="#ffffff"
        ohos:text_size="12fp"
        ohos:truncation_mode="ellipsis_at_middle" />

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:center_in_parent="true"
        ohos:orientation="vertical">

        <Image
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:background_element="$media:ic_launcher"
            ohos:layout_alignment="horizontal_center" />

        <Text
            ohos:height="match_content"
            ohos:width="150vp"
            ohos:multiple_lines="true"
            ohos:text="by hzw"
            ohos:text_alignment="center"
            ohos:text_color="#ffffff"
            ohos:text_size="15fp" />

        <Text
            ohos:height="match_content"
            ohos:width="150vp"
            ohos:multiple_lines="true"
            ohos:text="QQ:154330138"
            ohos:text_alignment="center"
            ohos:text_color="#ffffff"
            ohos:text_size="15fp" />

    </DirectionalLayout>

    <Image
        ohos:id="$+id:img"
        ohos:top_margin="60vp"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:above="$id:txt_demoe" />

    <Text
        ohos:id="$+id:txt_demoe"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:above="$id:demo"
        ohos:horizontal_center="true"
        ohos:padding="5vp"
        ohos:text="Demo"
        ohos:text_alignment="center"
        ohos:text_color="#888888"
        ohos:text_size="16fp" />

    <DirectionalLayout
        ohos:id="$+id:demo"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:btn_guide"
            ohos:height="35vp"
            ohos:width="55vp"
            ohos:background_element="$graphic:state_containertest"
            ohos:text="$string:guide"
            ohos:text_size="12fp" />

        <Button
            ohos:id="$+id:btn_mosaic"
            ohos:height="35vp"
            ohos:width="55vp"
            ohos:background_element="$graphic:state_containertest"
            ohos:left_margin="5vp"
            ohos:text="$string:mosaic"
            ohos:text_size="12fp" />

        <Button
            ohos:id="$+id:btn_scale_gesture"
            ohos:height="35vp"
            ohos:width="55vp"
            ohos:background_element="$graphic:state_containertest"
            ohos:left_margin="5vp"
            ohos:text="$string:scale_gesture_item"
            ohos:text_size="12fp" />

    </DirectionalLayout>

</DependentLayout>