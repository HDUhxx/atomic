        <Image
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:id="$+id:iv5"
                ohos:image_src="$media:icon"/>
        <Image
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:id="$+id:iv6"
                ohos:image_src="$media:icon"/>


    </DirectionalLayout>

</DirectionalLayout>