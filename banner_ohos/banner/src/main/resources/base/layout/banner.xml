<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                ohos:id="$+id:bannerContainer"
                 ohos:height="match_parent"
                 ohos:width="match_parent"
    >

    <com.youth.banner.view.BannerViewPager
            ohos:id="$+id:bannerViewPager"
            ohos:width="match_parent"
            ohos:height="match_parent"
             />

    <DependentLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:align_parent_bottom="1"
            >

        <DirectionalLayout
                ohos:id="$+id:circleIndicator"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:alignment="center"
                ohos:orientation="horizontal"
                ohos:padding="20"
                 />

        <Text
                ohos:id="$+id:numIndicator"
                ohos:width="80"
                ohos:height="80"
                ohos:align_parent_right="1"
                ohos:margin="16"
                ohos:background_element="$+:gray_radius"
                ohos:text_alignment="center"
                ohos:text="1/1"
                ohos:text_color="#ffffff"/>

        <DirectionalLayout
                ohos:id="$+id:titleView"
                ohos:width="match_parent"
                ohos:height="80"
                ohos:below="$+id:circleIndicator"
                ohos:background_element="#44000000"
                ohos:orientation="horizontal"

                >

            <Text
                    ohos:id="$+id:bannerTitle"
                    ohos:width="match_parent"
                    ohos:height="match_parent"
                    ohos:weight="1000"
                    ohos:ellipsize="marquee"
                    ohos:text_alignment="vertical_center"
                    ohos:left_padding="20"
                    ohos:max_text_lines="1"
                    ohos:text_color="#ffffff"
                     />
            <StackLayout
                    ohos:width="match_content"
                    ohos:height="match_parent"
                    ohos:left_margin="20"
                    ohos:right_padding="20">

                <Text
                        ohos:id="$+id:numIndicatorInside"
                        ohos:width="match_content"
                        ohos:height="match_parent"

                        ohos:text_alignment="vertical_center"
                        ohos:text="1/1"
                        ohos:text_color="#ffffff"
                        />

                <DirectionalLayout
                        ohos:id="$+id:indicatorInside"
                        ohos:width="match_content"
                        ohos:height="match_parent"
                        ohos:alignment="vertical_center"
                        ohos:orientation="horizontal"
                         />
            </StackLayout>
        </DirectionalLayout>
    </DependentLayout>
    <Image
            ohos:id="$+id:bannerDefaultImage"
            ohos:width="match_parent"
            ohos:height="match_parent"

           />
</DependentLayout>

