<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text"
        ohos:height="60vp"
        ohos:width="match_content"
        ohos:text=""
        ohos:left_margin="100vp"
        ohos:text_size="20fp"/>


    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="horizontal_center"
        ohos:top_margin="10vp"
        ohos:bottom_margin="10vp">

        <Button
            ohos:id="$+id:one"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:left_margin="6vp"
            ohos:right_margin="2vp"
            ohos:text="1"
            ohos:text_size="30fp"/>
        <Button
            ohos:id="$+id:two"
             ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:right_margin="2vp"
            ohos:text="2"
            ohos:text_size="30fp"/>
        <Button
            ohos:id="$+id:three"
             ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:right_margin="2vp"
            ohos:text="3"
            ohos:text_size="30fp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="horizontal_center"
        ohos:top_margin="10vp"
        ohos:bottom_margin="10vp">

        <Button
            ohos:id="$+id:four"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:left_margin="6vp"
            ohos:right_margin="2vp"
            ohos:text="4"
            ohos:text_size="30fp"/>
        <Button
            ohos:id="$+id:five"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:right_margin="2vp"
            ohos:text="5"
            ohos:text_size="30fp"/>
        <Button
            ohos:id="$+id:six"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:right_margin="2vp"
            ohos:text="6"
            ohos:text_size="30fp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="horizontal_center"
        ohos:top_margin="10vp"
        ohos:bottom_margin="10vp">

        <Button
            ohos:id="$+id:seven"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:left_margin="6vp"
            ohos:right_margin="2vp"
            ohos:text="7"
            ohos:text_size="30fp"/>
        <Button
            ohos:id="$+id:eight"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:right_margin="2vp"
            ohos:text="8"
            ohos:text_size="30fp"/>
        <Button
            ohos:id="$+id:nine"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:right_margin="2vp"
            ohos:text="9"
            ohos:text_size="30fp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="horizontal_center"
        ohos:top_margin="10vp"
        ohos:bottom_margin="10vp">

        <Button
            ohos:id="$+id:add"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:left_margin="6vp"
            ohos:right_margin="2vp"
            ohos:text="+"
            ohos:text_size="30fp"/>
        <Button
            ohos:id="$+id:subtract"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:right_margin="2vp"
            ohos:text="-"
            ohos:text_size="30fp"/>
        <Button
            ohos:id="$+id:zero"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:right_margin="2vp"
            ohos:text="0"
            ohos:text_size="30fp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="horizontal_center"
        ohos:top_margin="10vp"
        ohos:bottom_margin="10vp">

        <Button
            ohos:id="$+id:multiply"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:left_margin="6vp"
            ohos:right_margin="2vp"
            ohos:text="*"
            ohos:text_size="30fp"/>
        <Button
            ohos:id="$+id:divide"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:right_margin="2vp"
            ohos:text="/"
            ohos:text_size="30fp"/>
        <Button
            ohos:id="$+id:backspace"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:background_element="$graphic:background_button"
            ohos:right_margin="2vp"
            ohos:text="←"
            ohos:text_size="30fp"/>
    </DirectionalLayout>

    <Button
        ohos:id="$+id:button"
        ohos:height="60vp"
        ohos:width="180vp"
        ohos:background_element="$graphic:background_button"
        ohos:left_margin="90vp"
        ohos:text="计算"
        ohos:text_size="30fp"/>
</DirectionalLayout>