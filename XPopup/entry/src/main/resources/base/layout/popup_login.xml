<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="240vp"
    ohos:background_element="$graphic:bg_round3"
    ohos:orientation="vertical"
    ohos:padding="25vp">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="帐    号： "
            ohos:text_color="#000"
            ohos:text_size="18fp"/>

        <TextField
            ohos:id="$+id:tf_number"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:hint="请输入帐号"
            ohos:hint_color="#868686"
            ohos:max_text_lines="11"
            ohos:text_input_type="pattern_number"
            ohos:text_size="18fp"/>

    </DirectionalLayout>

    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#E6E6E6"
        ohos:top_margin="3vp"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="5vp">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="密    码： "
            ohos:text_color="#000"
            ohos:text_size="18fp"/>

        <TextField
            ohos:id="$+id:tf_password"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:hint="请输入密码"
            ohos:hint_color="#868686"
            ohos:max_text_lines="11"
            ohos:text_input_type="pattern_number"
            ohos:text_size="18fp"/>

    </DirectionalLayout>

    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#E6E6E6"
        ohos:top_margin="15vp"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="15vp">

        <Button
            ohos:id="$+id:btn_cancle"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:padding="7vp"
            ohos:text="取消"
            ohos:text_size="17fp"
            ohos:weight="1"/>

        <Button
            ohos:id="$+id:btn_login"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:left_margin="5vp"
            ohos:padding="7vp"
            ohos:text="登录"
            ohos:text_size="17fp"
            ohos:weight="1"/>
    </DirectionalLayout>

</DirectionalLayout>