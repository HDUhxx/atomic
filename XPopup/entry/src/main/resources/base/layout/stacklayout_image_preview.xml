<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent">

        <ListContainer
            ohos:id="$+id:listContainer"
            ohos:height="1300vp"
            ohos:padding="3vp"
            ohos:width="match_parent"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:multiple_lines="true"
            ohos:padding="14vp"
            ohos:text="以下是单张图片使用场景："
            ohos:text_color="#222"
            ohos:text_size="18fp"/>

        <Image
            ohos:id="$+id:image1"
            ohos:height="150vp"
            ohos:width="match_parent"
            ohos:margin="30vp"
            ohos:scale_mode="zoom_center"/>

        <Image
            ohos:id="$+id:image2"
            ohos:height="match_content"
            ohos:width="90vp"
            ohos:layout_alignment="right"
            ohos:margin="10vp"
            ohos:scale_mode="zoom_center"/>

        <Button
            ohos:id="$+id:btn_custom"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#D9D9D9"
            ohos:bottom_margin="20vp"
            ohos:padding="10vp"
            ohos:text_size="15fp"
            ohos:left_margin="3vp"
            ohos:right_margin="3vp"
            ohos:text="自定义ImageViewer弹窗的布局"
            ohos:top_margin="20vp"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:multiple_lines="true"
            ohos:padding="14vp"
            ohos:text="以下是ViewPager使用场景，点击任意一个图片查看效果："
            ohos:text_color="#222"
            ohos:text_size="18fp"/>

        <PageSlider
            ohos:id="$+id:pager"
            ohos:height="160vp"
            ohos:width="match_parent"
            ohos:bottom_margin="30vp"/>

    </DirectionalLayout>


</ScrollView>