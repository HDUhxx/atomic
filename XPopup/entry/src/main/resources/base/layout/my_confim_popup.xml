<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="250vp"
    ohos:background_element="#f0a0ca"
    ohos:orientation="vertical"
    ohos:padding="20vp">

    <Text
        ohos:id="$+id:tv_title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="阿斯达"
        ohos:text_weight="700"
        ohos:text_alignment="center"
        ohos:text_color="#111"
        ohos:text_size="18fp"/>

    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#ff0"
        ohos:bottom_margin="10vp"
        ohos:top_margin="10vp"/>

    <Text
        ohos:id="$+id:tv_content"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_margin="16vp"
        ohos:multiple_lines="true"
        ohos:text=""
        ohos:text_color="$color:_xpopup_content_color"
        ohos:text_size="16fp"
        ohos:top_margin="10vp"/>

    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#FF0"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:tv_cancel"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:bottom_margin="10vp"
            ohos:right_margin="20vp"
            ohos:text="$string:xpopup_cancel"
            ohos:text_alignment="center"
            ohos:text_size="16fp"
            ohos:text_color="#555555"
            ohos:top_margin="10vp"
            ohos:weight="1"/>

        <Text
            ohos:id="$+id:tv_confirm"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:bottom_margin="10vp"
            ohos:text_color="#555555"
            ohos:text="$string:xpopup_ok"
            ohos:text_alignment="center"
            ohos:text_size="16fp"
            ohos:top_margin="10vp"
            ohos:weight="1"/>

    </DirectionalLayout>

</DirectionalLayout>