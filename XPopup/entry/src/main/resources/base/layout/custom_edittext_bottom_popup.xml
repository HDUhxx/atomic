<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#fff"
        ohos:bottom_padding="3vp"
        ohos:orientation="vertical">

    <Text
            ohos:height="48vp"
            ohos:width="match_parent"
            ohos:background_element="#eee"
            ohos:text="带有输入框并贴着输入法的弹窗"
            ohos:text_alignment="center"
            ohos:text_color="#333"
            ohos:text_size="18fp"
            ohos:text_weight="700"/>

    <TextField
            ohos:id="$+id:et_comment"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="#28822E"
            ohos:hint="请输入评论"
            ohos:left_margin="20vp"
            ohos:right_margin="20vp"
            ohos:text_size="17fp"
            ohos:top_margin="15vp"/>

    <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:multiple_lines="true"
            ohos:padding="20vp"
            ohos:text="该输入框通过继承BottomPopupView实现，会智能根据内容的高度来调整上移的距离；默认会贴在输入法之上，为了不挡住输入框，在某些情况下回适当的伸入输入法之下。"
            ohos:text_color="#777"
            ohos:text_size="16fp"/>

    <Button
            ohos:id="$+id:btn_finish"
            ohos:height="match_content"
            ohos:width="150vp"
            ohos:background_element="#D9D9D9"
            ohos:layout_alignment="horizontal_center"
            ohos:padding="7vp"
            ohos:text="发表评论"
            ohos:text_size="15fp"/>

    <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="#28822E"
            ohos:hint="测试底部输入框交互"
            ohos:left_margin="20vp"
            ohos:right_margin="20vp"
            ohos:text_size="17fp"
            ohos:top_margin="15vp"/>

</DirectionalLayout>