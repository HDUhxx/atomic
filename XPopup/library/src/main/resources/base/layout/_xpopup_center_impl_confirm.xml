<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:top_padding="16vp">

    <Text
        ohos:id="$+id:tv_title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:max_text_lines="1"
        ohos:truncation_mode="ellipsis_at_end"
        ohos:text_alignment="horizontal_center"
        ohos:text_color="$color:_xpopup_title_color"
        ohos:text_size="20fp"/>

    <Text
        ohos:id="$+id:tv_content"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_padding="5vp"
        ohos:end_padding="20vp"
        ohos:start_padding="20vp"
        ohos:multiple_lines="true"
        ohos:text_alignment="center"
        ohos:text_color="$color:_xpopup_content_color"
        ohos:text_size="16fp"
        ohos:top_padding="15vp"/>

    <TextField
        ohos:id="$+id:et_input"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_margin="10vp"
        ohos:end_margin="20vp"
        ohos:hint_color="#999999"
        ohos:start_margin="20vp"
        ohos:text_color="$color:_xpopup_content_color"
        ohos:text_size="16fp"
        ohos:top_margin="10vp"
        ohos:visibility="hide"/>

    <Component
        ohos:id="$+id:xpopup_divider1"
        ohos:height="0.5vp"
        ohos:width="match_parent"
        ohos:background_element="$color:_xpopup_list_divider"
        ohos:top_margin="20vp"/>

    <DirectionalLayout
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:tv_cancel"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:bottom_padding="10vp"
            ohos:text="$string:xpopup_cancel"
            ohos:text_alignment="center"
            ohos:text_color="#666666"
            ohos:text_size="16fp"
            ohos:top_padding="10vp"
            ohos:weight="1"/>

        <Component
            ohos:id="$+id:xpopup_divider2"
            ohos:height="match_parent"
            ohos:width="0.5vp"
            ohos:background_element="$color:_xpopup_list_divider"/>

        <Text
            ohos:id="$+id:tv_confirm"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:bottom_padding="10vp"
            ohos:text="$string:xpopup_ok"
            ohos:text_alignment="center"
            ohos:text_size="16fp"
            ohos:top_padding="10vp"
            ohos:weight="1"/>


    </DirectionalLayout>

</DirectionalLayout>