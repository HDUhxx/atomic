<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:tv_title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_padding="14vp"
        ohos:end_padding="18vp"
        ohos:max_text_lines="1"
        ohos:start_padding="18vp"
        ohos:text_alignment="center"
        ohos:text_color="$color:_xpopup_title_color"
        ohos:text_size="17fp"
        ohos:text_weight="700"
        ohos:top_padding="14vp"
        ohos:truncation_mode="ellipsis_at_end"/>

    <include
        ohos:height="0.5vp"
        ohos:width="match_parent"
        ohos:layout="$layout:_xpopup_divider"/>

    <ListContainer
        ohos:id="$+id:listContainer"
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:end_margin="4vp"
        ohos:orientation="vertical"
        ohos:start_margin="4vp"
        ohos:weight="1"/>

    <Component
        ohos:id="$+id:vv_divider"
        ohos:height="10vp"
        ohos:width="match_parent"
        ohos:background_element="#fff5f5f5"/>

    <Text
        ohos:id="$+id:tv_cancel"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_padding="15vp"
        ohos:text="$string:xpopup_cancel"
        ohos:text_alignment="center"
        ohos:text_color="$color:_xpopup_title_color"
        ohos:text_size="15fp"
        ohos:top_padding="15vp"/>

</DirectionalLayout>