<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="600px"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:background_element="#FFDDDDDD">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent">
        </DirectionalLayout>
        <Image
            ohos:height="200px"
            ohos:width="match_parent"
            ohos:image_src="$media:shipinshejiao1"
            ohos:scale_x="2.5"
            ohos:scale_y="2.5"
            ohos:top_padding="100px"
            ohos:top_margin="40px"
            />
        <Text
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:text="视频社交"
            ohos:text_size="16fp"
            ohos:text_alignment="center"
            ohos:top_margin="130px"/>

    </DirectionalLayout>
    <Text
        ohos:id="$+id:jltf_wodepaishe"
        ohos:width="match_parent"
        ohos:height="200px"
        ohos:text="拍摄"
        ohos:background_element="#FFDDDDDD"
        ohos:text_size="20fp"
        ohos:left_padding="15px"
        ohos:top_margin="100px"/>
    <Text
        ohos:id="$+id:jltf_wodeshangchuan"
        ohos:width="match_parent"
        ohos:height="200px"
        ohos:text="上传"
        ohos:background_element="#FFDDDDDD"
        ohos:text_size="20fp"
        ohos:left_padding="15px"
        ohos:top_margin="1px"/>
    <Text
        ohos:id="$+id:jltf_wodeyunjian"
        ohos:width="match_parent"
        ohos:height="200px"
        ohos:text="云间"
        ohos:background_element="#FFDDDDDD"
        ohos:text_size="20fp"
        ohos:left_padding="15px"
        ohos:top_margin="1px"/>
    <Text
        ohos:id="$+id:jltf_wodehaoyou"
        ohos:width="match_parent"
        ohos:height="200px"
        ohos:text="好友"
        ohos:background_element="#FFDDDDDD"
        ohos:text_size="20fp"
        ohos:left_padding="15px"
        ohos:top_margin="1px"/>

    <Text
        ohos:id="$+id:jltf_yonghuxy"
        ohos:width="match_parent"
        ohos:height="200px"
        ohos:text="用户协议"
        ohos:background_element="#FFDDDDDD"
        ohos:text_size="20fp"
        ohos:left_padding="15px"
        ohos:top_margin="1px"/>
    <Text
        ohos:id="$+id:jltf_yinsism"
        ohos:width="match_parent"
        ohos:height="200px"
        ohos:text="隐私申明"
        ohos:background_element="#FFDDDDDD"
        ohos:text_size="20fp"
        ohos:left_padding="15px"
        ohos:top_margin="2px"/>
</DirectionalLayout>