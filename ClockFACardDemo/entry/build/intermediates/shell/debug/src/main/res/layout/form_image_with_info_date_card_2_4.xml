<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent" android:layout_width="match_parent" android:background="#6A9F99"> 
  <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal"> 
    <TextView android:id="@+id/date" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_margin="10sp" android:text="@string/default_date" android:fontFamily="@string/text_font_date"></TextView>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:orientation="horizontal" android:layout_marginTop="10sp"> 
      <TextView android:id="@+id/sun" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/Sunday" android:textColor="#C0C0C0" android:layout_weight="1"></TextView>
      <TextView android:id="@+id/mon" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/Monday" android:textColor="#C0C0C0" android:layout_marginStart="5dp" android:layout_marginEnd="1dp" android:layout_weight="1"></TextView>
      <TextView android:id="@+id/tue" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/Tuesday" android:textColor="#C0C0C0" android:layout_marginStart="5dp" android:layout_marginEnd="1px" android:layout_weight="1"></TextView>
      <TextView android:id="@+id/wed" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/Wednesday" android:textColor="#C0C0C0" android:layout_marginStart="5dp" android:layout_marginEnd="1px" android:layout_weight="1"></TextView>
      <TextView android:id="@+id/thu" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/Thursday" android:textColor="#C0C0C0" android:layout_marginStart="5dp" android:layout_marginEnd="1px" android:layout_weight="1"></TextView>
      <TextView android:id="@+id/fri" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/Friday" android:textColor="#C0C0C0" android:layout_marginStart="5dp" android:layout_marginEnd="1px" android:layout_weight="1"></TextView>
      <TextView android:id="@+id/sat" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/Saturday" android:textColor="#C0C0C0" android:layout_marginStart="5dp" android:layout_marginEnd="20px" android:layout_weight="1"></TextView>
    </LinearLayout>
  </RelativeLayout>
  <LinearLayout android:id="@+id/title" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal" android:orientation="horizontal" android:layout_marginTop="35sp"> 
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:text="@string/hour" android:textSize="20sp"></TextView>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:text="@string/min" android:textSize="20sp"></TextView>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:text="@string/sec" android:textSize="20sp"></TextView>
  </LinearLayout>
  <LinearLayout android:id="@+id/time" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal" android:layout_below="@id/title" android:layout_marginStart="20sp" android:layout_marginEnd="20sp" android:orientation="horizontal"> 
    <TextView android:id="@+id/hour" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginStart="20dp" android:layout_marginEnd="10dp" android:text="@string/zero" android:fontFamily="@string/text_font_hour" android:textSize="40sp" android:layout_marginTop="2dp"></TextView>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/colon" android:fontFamily="@string/text_font_colon" android:textSize="40sp" android:layout_marginTop="2dp"></TextView>
    <TextView android:id="@+id/min" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:text="@string/zero" android:fontFamily="@string/text_font_hour" android:textSize="40sp" android:layout_marginTop="2dp"></TextView>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/colon" android:fontFamily="@string/text_font_colon" android:textSize="40sp" android:layout_marginTop="2dp"></TextView>
    <TextView android:id="@+id/sec" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:text="@string/zero" android:fontFamily="@string/text_font_hour" android:textSize="40sp" android:layout_marginTop="2dp"></TextView>
  </LinearLayout>
</RelativeLayout>
