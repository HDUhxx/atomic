<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent" android:layout_width="match_parent" android:background="#6A9F99"> 
  <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal"> 
    <TextView android:id="@+id/date" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_margin="10sp" android:text="2021-03-24" android:fontFamily="sans-serif-medium" android:textSize="20sp"></TextView>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:orientation="horizontal" android:layout_marginTop="10sp"> 
      <TextView android:id="@+id/sun" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="日" android:textColor="#C0C0C0" android:textSize="20sp" android:layout_weight="1"></TextView>
      <TextView android:id="@+id/mon" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="一" android:textColor="#C0C0C0" android:textSize="20sp" android:layout_weight="1"></TextView>
      <TextView android:id="@+id/tue" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="二" android:textColor="#C0C0C0" android:textSize="20sp" android:layout_weight="1"></TextView>
      <TextView android:id="@+id/wed" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="三" android:textColor="#C0C0C0" android:textSize="20sp" android:layout_weight="1"></TextView>
      <TextView android:id="@+id/thu" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="四" android:textColor="#C0C0C0" android:textSize="20sp" android:layout_weight="1"></TextView>
      <TextView android:id="@+id/fri" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="五" android:textColor="#C0C0C0" android:textSize="20sp" android:layout_weight="1"></TextView>
      <TextView android:id="@+id/sat" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="六" android:textColor="#C0C0C0" android:textSize="20sp" android:layout_weight="1" android:layout_marginRight="10sp"></TextView>
    </LinearLayout>
  </RelativeLayout>
  <LinearLayout android:id="@+id/title" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal" android:orientation="horizontal" android:layout_marginTop="35sp"> 
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="HOUR" android:textSize="20sp"></TextView>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="MIN" android:textSize="20sp"></TextView>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="SEC" android:textSize="20sp"></TextView>
  </LinearLayout>
  <LinearLayout android:id="@+id/time" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal" android:layout_below="@id/title" android:orientation="horizontal"> 
    <TextView android:id="@+id/hour" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="10dp" android:text="00" android:fontFamily="HwChinese-medium" android:textSize="40sp" android:layout_marginTop="2dp"></TextView>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text=":" android:fontFamily="bold" android:textSize="40sp" android:layout_marginTop="2dp"></TextView>
    <TextView android:id="@+id/min" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="00" android:fontFamily="HwChinese-medium" android:textSize="40sp" android:layout_marginTop="2dp"></TextView>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text=":" android:fontFamily="bold" android:textSize="40sp" android:layout_marginTop="2dp"></TextView>
    <TextView android:id="@+id/sec" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="00" android:fontFamily="HwChinese-medium" android:textSize="40sp" android:layout_marginTop="2dp"></TextView>
  </LinearLayout>
</RelativeLayout>
